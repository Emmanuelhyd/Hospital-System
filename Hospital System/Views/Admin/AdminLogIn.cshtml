@model Hospital_System.Models.AdminModel


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <title>Admin Login Page</title>
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: #ffcccc;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
            box-sizing: border-box;
        }

        .btn-primary {
            background-color: red;
            border-color: #dc3545;
        }

            .btn-primary:hover {
                background-color: #ff5c5c;
            }

        .alert-danger {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    @using (Html.BeginForm("AdminLogin", "Admin", FormMethod.Post))
    {
        <div class="login-container">
            <h2 class="text-center">Admin LogIn</h2>
            <p class="text-center">Login to get instant access</p>

            @if (ViewData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @ViewData["ErrorMessage"]
                </div>
            }

            <div class="form-group">
                @Html.LabelFor(model => model.EmailId)
                @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control", placeholder = "Enter your email" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Enter your password" })
            </div>

            <div class="form-check mb-3">
                @Html.CheckBoxFor(model => model.RememberMe, new { @class = "form-check-input" })
                @Html.LabelFor(model => model.RememberMe, new { @class = "form-check-label" })
            </div>

            <div class="text-center mb-3">
                <a href="@Url.Action("ForgotPassword", "Admin")">Forgot Password?</a>
            </div>

            <div class="text-center mb-3">
                <input type="submit" value="Submit" class="btn btn-primary btn-block" />
            </div>
        </div>
    }

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

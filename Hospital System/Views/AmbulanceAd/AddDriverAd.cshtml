@model Hospital_System.Models.MDriverAd

@{
    ViewBag.Title = "AddDriverAd";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


@using (Html.BeginForm("AddDriverAd", "AmbulanceAd"))
{
    <div style="position: absolute; width: 85%; margin-left: -6%; background-color: white;">

        <div  style="margin-left: 363px">
            <h2 style="margin-left:-350px">Add Driver Details</h2>
            <div>
                <style>
                    /* General form styles */
                    body {
                        font-family: Arial, sans-serif;
                        background-color: #f8f8f8; /* Light background for contrast */
                    }

                    h2 {
                        text-align: center;
                        color: #333; /* Darker color for the heading */
                    }

                    div {
                        padding: 20px;
                        margin: 10px 0;
                    }

                    /* Container for the form */
                    form {
                        background-color: #fff; /* White background for the form */
                        border-radius: 8px; /* Rounded corners */
                        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow */
                        max-width: 600px; /* Max width of the form */
                        margin: auto; /* Center the form */
                    }

                    /* Label styles */
                    label {
                        display: block;
                        margin-bottom: 5px; /* Space between label and input */
                        font-weight: bold; /* Bold labels */
                        color: #555; /* Slightly lighter text color */
                    }

                    /* Input styles */
                    input[type="text"],
                    input[type="submit"] {
                        width: 40%; /* Full width inputs */
                        padding: 10px; /* Padding inside inputs */
                        margin-bottom: 15px; /* Space below inputs */
                        border: 1px solid #ccc; /* Light border */
                        border-radius: 4px; /* Slightly rounded corners */
                        box-sizing: border-box; /* Include padding in width calculation */
                    }

                        /* Input focus styles */
                        input[type="text"]:focus {
                            border-color: #5b9ea0; /* Change border color on focus */
                            outline: none; /* Remove default outline */
                        }

                    /* Submit button styles */
                    input[type="submit"] {
                        background-color: #5b9ea0; /* Primary color for the button */
                        color: white; /* White text color */
                        font-weight: bold; /* Bold text */
                        cursor: pointer; /* Pointer cursor */
                        transition: background-color 0.3s; /* Smooth transition */
                        width:100px;
                        margin-left: -170px;
                        margin-top: 47px;
                        position: absolute;
                    }

                        input[type="submit"]:hover {
                            background-color: #4a7f80; /* Darker shade on hover */
                        }

                    /* Validation message styles */
                    .validation-message {
                        color: red; /* Red color for error messages */
                        font-size: 0.9em; /* Slightly smaller font size */
                        margin-top: -10px; /* Pull up closer to the input */
                        margin-bottom: 10px; /* Space below the error message */
                    }
                </style>

                @Html.LabelFor(m => m.Id)
                @Html.TextBoxFor(m => m.Id)
                @Html.ValidationMessageFor(m => m.Id, "", new { @class = "validation-message" })

                @Html.LabelFor(m => m.Name)
                @Html.TextBoxFor(m => m.Name, new { @required = "required", @placeholder = "Enter your Name" })

                @Html.LabelFor(m => m.Contact)
                @Html.TextBoxFor(m => m.Contact, new { @required = "required", @placeholder = "Registered Mobile Number" })

                @Html.LabelFor(m => m.Address)
                @Html.TextBoxFor(m => m.Address, new { @required = "required", @placeholder = "Enter your Address" })

                @Html.LabelFor(m => m.CNIC)
                @Html.TextBoxFor(m => m.CNIC, new { @required = "required", @placeholder = "Enter your CNIC" })

                <input type="submit" value="Submit">
            </div>
        </div>
    </div>
}






@model Hospital_System.Dash.DashboardDetails

@{
    ViewBag.Title = "Add Driver Details";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("AddDriverAd", "AmbulanceAd"))
{
    <div class="form-container">
        <h2>Add Driver Details</h2>

        <!-- Flex container for side-by-side form fields -->
        <div class="form-fields">
            <div class="form-group">
                @Html.LabelFor(m => m.MDriverAd.Id)
                @Html.TextBoxFor(m => m.MDriverAd.Id, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.MDriverAd.Id, "", new { @class = "validation-message" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.MDriverAd.DriverName)
                @Html.TextBoxFor(m => m.MDriverAd.DriverName, new { @required = "required", @placeholder = "Enter your Name", @class = "form-control" })
            </div>
        </div>

        <!-- Flex container for side-by-side form fields -->
        <div class="form-fields">
            <div class="form-group">
                @Html.LabelFor(m => m.MDriverAd.DriverId)
                @Html.TextBoxFor(m => m.MDriverAd.DriverId, new { @required = "required", @placeholder = "Enter your Driver ID", @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.MDriverAd.Contact)
                @Html.TextBoxFor(m => m.MDriverAd.Contact, new { @required = "required", @placeholder = "Registered Mobile Number", @class = "form-control" })
            </div>
        </div>

        <!-- Flex container for side-by-side form fields -->
        <div class="form-fields">
            <div class="form-group">
                @Html.LabelFor(m => m.MDriverAd.Address)
                @Html.TextBoxFor(m => m.MDriverAd.Address, new { @required = "required", @placeholder = "Enter your Address", @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.MDriverAd.CNIC)
                @Html.TextBoxFor(m => m.MDriverAd.CNIC, new { @required = "required", @placeholder = "Enter your CNIC", @class = "form-control" })
            </div>
        </div>

        <div class="form-actions">
            <input type="submit" value="Submit" class="submit-button" />
            <button type="button" class="back-button" onclick="Back()">Back</button>
        </div>
    </div>
}

<script>
    function Back() {
        window.location.href = "/Dashboard/DashboardView";
    }
</script>

<style>
    /* Body styling */
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f8f8; /* Light background for contrast */
    }

    /* Main form container */
    .form-container {
        width: 85%;
        max-width: 800px; /* Max width for better layout */
        margin: 50px auto; /* Center the form with some top margin */
        background-color: white; /* White background for the form */
        padding: 20px; /* Inner padding */
        border-radius: 8px; /* Rounded corners */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Subtle shadow */
    }

    /* Form heading */
    h2 {
        text-align: center;
        color: #333; /* Darker color for the heading */
        margin-bottom: 20px; /* Space below the heading */
    }

    /* Flex container for side-by-side form fields */
    .form-fields {
        display: flex;
        justify-content: space-between;
        gap: 20px; /* Space between fields */
        flex-wrap: wrap; /* Allow wrapping when needed */
    }

    /* Form group for individual fields */
    .form-group {
        flex: 1 1 calc(50% - 20px); /* Each form group will take up 50% of the container width */
        margin-bottom: 15px;
    }

    .form-group label {
        display: block;
        margin-bottom: 5px; /* Space between label and input */
        font-weight: bold; /* Bold labels */
        color: #555; /* Slightly lighter text color */
    }

    /* Form input styling */
    .form-control {
        width: 100%; /* Full width inputs */
        padding: 10px; /* Padding inside inputs */
        border: 1px solid #ccc; /* Light border */
        border-radius: 4px; /* Slightly rounded corners */
        box-sizing: border-box; /* Include padding in width calculation */
    }

    .form-control:focus {
        border-color: #5b9ea0; /* Change border color on focus */
        outline: none; /* Remove default outline */
    }

    /* Submit button styling */
    .submit-button {
        background-color: #5b9ea0; /* Primary color for the button */
        color: white; /* White text color */
        font-weight: bold; /* Bold text */
        cursor: pointer; /* Pointer cursor */
        transition: background-color 0.3s; /* Smooth transition */
        width: 100px; /* Fixed width for the button */
    }

    .submit-button:hover {
        background-color: #4a7f80; /* Darker shade on hover */
    }

    /* Back button styling */
    .back-button {
        background-color: #007bff; /* Primary color */
        color: white; /* Text color */
        border: none; /* No border */
        border-radius: 5px; /* Rounded corners */
        padding: 10px 20px; /* Padding for size */
        font-size: 16px; /* Font size */
        cursor: pointer; /* Pointer cursor on hover */
        transition: background-color 0.3s ease, box-shadow 0.3s ease; /* Smooth transition */
    }

    .back-button:hover {
        background-color: #0056b3; /* Darker shade on hover */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Shadow effect on hover */
    }

    /* Validation message styling */
    .validation-message {
        color: red; /* Red color for error messages */
        font-size: 0.9em; /* Slightly smaller font size */
        margin-top: -10px; /* Pull up closer to the input */
        margin-bottom: 10px; /* Space below the error message */
    }

    /* Flex container for buttons */
    .form-actions {
        display: flex; /* Flexbox for button alignment */
        justify-content: space-between; /* Space between buttons */
        margin-top: 20px; /* Space above buttons */
    }

    /* Make sure the fields stack vertically on smaller screens */
    media (max-width: 768px) {
        .form-fields {
            flex-direction: column; /* Stack fields vertically on small screens */
        }

        .form-group {
            flex: 1 1 100%; /* Make form groups take up full width */
        }
    }
</style>









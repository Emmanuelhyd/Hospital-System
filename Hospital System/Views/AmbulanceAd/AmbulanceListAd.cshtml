@model Hospital_System.Dash.DashboardDetails

@{
    ViewBag.Title = "AmbulanceListAd";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; // Uncomment if needed
}

<script>
    function CreateNew() {
        window.location.href = 'AddAmbulancead';
    }
</script>

@using (Html.BeginForm())
{
    <div style="position: absolute; width: 85%; background-color: white; margin-top: 37px; ">
        <div>
            <input type="button" value="Create New" onclick="CreateNew()">
        </div>

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>AmbulanceId</th>
                    <th>AmbulanceStatus</th>
                    <th>Driver Name</th>
                    <th>Driver Id</th>
                    <th>Contact</th>
                    <th>Address</th>
                    <th>CNIC</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.mAmbulances)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.AmbulanceId)</td>
                        <td>@Html.DisplayFor(modelItem => item.AmbulanceStatus)</td>
                        <td>@Html.DisplayFor(modelItem => item.DriverName)</td>
                        <td>@Html.DisplayFor(modelItem => item.DriverId)</td>
                        <td>@Html.DisplayFor(modelItem => item.Contact)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.CNIC)</td>
                        <td style="display: flex; gap: 10px; ">

                            <a href="@Url.Action("AmbulanceEdit", new { Id = item.Id })">
                                <i class="fas fa-edit" style="color:blue;"></i>
                            </a>
                            <a href="javascript:void(0);"
                               onclick="confirmDelete('@Url.Action("AmbulanceDelete", new {Id = item.Id })')">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                            <a href="javascript:void(0);" onclick="showAmbulance(@item.Id)">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div id="AmbulancePopup" style="display:none;"></div>
    <div id="overlay" style="display:none;"></div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function showAmbulance(AmbulanceId) {
            $.ajax({
                url: '@Url.Action("Ambulance", "AmbulanceAd")', // Replace with your actual URL
                type: 'GET',
                data: { Id: AmbulanceId },
                success: function (data) {
                    $('#AmbulancePopup').html(data);
                    $('#AmbulancePopup').show();
                    $('#overlay').show();
                },
                error: function () {
                    alert("Error loading details.");
                }
            });
        }

        function closePopup() {
            $('#AmbulancePopup').hide();
            $('#overlay').hide();
        }
    </script>
}


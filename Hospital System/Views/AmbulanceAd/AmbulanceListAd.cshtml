@model IEnumerable<Hospital_System.Models.MAmbulance>


@{
    ViewBag.Title = "AmbulanceListAd";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; // Uncomment if needed
}

<script>
    function CreateNew() {
        window.location.href = 'AddAmbulancead';
    }
</script>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>


@using (Html.BeginForm())
{
    <div style="position: absolute; width: 85%; margin-left: 15%; background-color: white;">
        
        <div>
            <input type="button" value="Create New" onclick="CreateNew()">
            @*<input type="search"  id="amb" name="amb">
            <input type="submit" value="Search">*@
        </div>

        <table>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.Name)</th>
                    <th>@Html.DisplayNameFor(model => model.AmbulanceId)</th>
                    <th>@Html.DisplayNameFor(model => model.AmbulanceStatus)</th>
                    <th>@Html.DisplayNameFor(model => model.AmbulanceDriver)</th>
                    <th>@Html.DisplayNameFor(model => model.AmbulanceDriverId)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.AmbulanceId)</td>
                        <td>@Html.DisplayFor(modelItem => item.AmbulanceStatus)</td>
                        <td>@Html.DisplayFor(modelItem => item.AmbulanceDriver)</td>
                        <td>@Html.DisplayFor(modelItem => item.AmbulanceDriverId)</td>
                        <td style="display: flex; gap: 10px;">

                            <a href="@Url.Action("AmbulanceEdit", new { Id = item.Id })">
                                <i class="fas fa-edit" style="color:blue;"></i>
                            </a>

                            <a href="@Url.Action("AmbulanceDelete", new { Id = item.Id })">
                                <i class="fas fa-trash-alt" style="color:red;"></i>
                            </a>
                            <a href="javascript:void(0);" onclick="showAmbulance(@item.Id)">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>


    <div id="AmbulancePopup" style="display:none;"></div>
    <div id="overlay" style="display:none;"></div>

    <script>
        function showAmbulance(AmbulanceId) {
            $.ajax({
                url: '@Url.Action("Ambulance", "AmbulanceAd")',
                type: 'GET',
                data: { Id: AmbulanceId },
                success: function (data) {
                    $('#AmbulancePopup').html(data);
                    $('#AmbulancePopup').show();
                    $('#overlay').show();
                },
                error: function () {
                    alert("Error loading details.");
                }
            });
        }

        function closePopup() {
            $('#AmbulancePopup').hide();
            $('#overlay').hide();
        }
    </script>
}





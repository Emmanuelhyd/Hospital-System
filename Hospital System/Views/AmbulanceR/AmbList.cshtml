@model IEnumerable<Hospital_System.Models.AmbulanceDo>

@{
    Layout = "~/Views/Shared/_LayoutRec.cshtml";
}

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">


@using (Html.BeginForm())
{
    <div class="sb2-2" style="height: 20px; position: absolute; margin-top: 65px;">
        <div class="sb2-2-2">
            <ul>
                <li>
                    <a href="/ReceptionAdmin/ReceptionFrontPage"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
                </li>
                <li class="active-bre">
                    <a href="#"> Available ambulances</a>
                </li>
                <li class="page-back" style="margin-left:-10px;">
                    <a href="/ReceptionAdmin/ReceptionFrontPage"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="sb2-2-3" style="margin-left: 20%; position: absolute; width: 80%; margin-top:135px;">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-title">
                        <div>
                            <h4 style="margin-left: 300px; color: white;font-size:20px;">Available Ambulances</h4>
                            @*<input type="button" value="Add New" onclick="window.location.href='@Url.Action("AddDepartment", "Department")'" class="my-btn" style="margin-left: 10px; margin-top: -28px; position: absolute; ">*@
                        </div>
                    </div>


                    <div class="tab-inn">
                        <div class="table-responsive table-desi">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>@Html.DisplayNameFor(m => m.Id)</th>
                                        <th>@Html.DisplayNameFor(m => m.Name)</th>
                                        <th>@Html.DisplayNameFor(m => m.AmbulanceId)</th>
                                        <th>@Html.DisplayNameFor(m => m.AmbulanceStatus)</th>
                                        <th>@Html.DisplayNameFor(m => m.DriverName)</th>
                                        <th>@Html.DisplayNameFor(m => m.DriverId)</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ambulance in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(m => ambulance.Id)</td>
                                            <td>@Html.DisplayFor(m => ambulance.Name)</td>
                                            <td>@Html.DisplayFor(m => ambulance.AmbulanceId)</td>
                                            <td>@Html.DisplayFor(m => ambulance.AmbulanceStatus)</td>
                                            <td>@Html.DisplayFor(m => ambulance.DriverName)</td>
                                            <td>@Html.DisplayFor(m => ambulance.DriverId)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
}



<style>
    .my-btn {
        color: #ffffff;
        background: #57666d;
        padding: 10px;
        line-height: 10px;
        font-weight: 1000;
    }

    .inn-titles {
        padding: 1px 25px;
        background: #002147;
    }
</style>
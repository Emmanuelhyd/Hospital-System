

@model Hospital_System.Dash.DashboardDetails

@{
    ViewBag.Title = "AnnouncementList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; // Uncomment if needed
}

<script>
    function CreateNew() {

        window.location.href = 'AddAnnouncementAd';
    }
</script>
@using (Html.BeginForm())
{
    <div style="position: absolute; width: 85%;  background-color: white;">
        <div>
            <div>
                <input type="button" value="CreateNew" onclick="CreateNew()" />

                <input type="search" id="announcement" name="announcement">
                <input type="submit" value="Search" />
            </div>

            <table>
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Announcement</th>
                        <th>AnnouncementFor</th>
                        <th>EndDate</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.mAnnouncements)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Announcement)</td>
                            <td>@Html.DisplayFor(modelItem => item.AnnouncementFor)</td>
                            <td>@Html.DisplayFor(modelItem => item.EndDate)</td>
                            <td style="display: flex; gap: 10px;">

                                <a href="@Url.Action("ALEdit", new { Id = item.Id })">
                                    <i class="fas fa-edit" style="color:blue;"></i>
                                </a>

                                <a href="@Url.Action("AnnouncementDelete", new { Id = item.Id })">
                                    <i class="fas fa-trash-alt" style="color:red;"></i>
                                </a>



                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}


<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background-color: #f4f4f4;
    }

    h1 {
        color: #333;
        text-align: center;
    }

    div {
        margin-bottom: 20px;
    }

    input[type="button"], input[type="submit"] {
        padding: 10px 15px;
        margin-right: 10px;
        border: none;
        background-color: #3051bd;
        color: white;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        input[type="button"]:hover, input[type="submit"]:hover {
            background-color: #3051bd;
        }

    input[type="search"] {
        padding: 10px;
        width: 200px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;


@model IEnumerable<Hospital_System.Models.MAppointmentAd>

@{
    ViewBag.Title = "BookList";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<script>
    function CreateNew() {

        window.location.href = 'AddAppointmentAd';
    }
</script>

@using (Html.BeginForm())
{
    <div style="position: absolute; width: 81%; margin-left: 261px; background-color: white;">
        <div>
            

            <table>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.Id)</th>
                    <th>@Html.DisplayNameFor(model => model.PatientName)</th>
                    <th>@Html.DisplayNameFor(model => model.PatientType)</th>
                    <th>@Html.DisplayNameFor(model => model.Gender)</th>
                    <th>@Html.DisplayNameFor(model => model.Problem)</th>
                    <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Address)</th>
                    <th>@Html.DisplayNameFor(model => model.Date)</th>
                    <th>@Html.DisplayNameFor(model => model.Time)</th>
                    <th>@Html.DisplayNameFor(model => model.Description)</th>
                    
                </tr>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                        <td>@Html.DisplayFor(modelItem => item.PatientType)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td>@Html.DisplayFor(modelItem => item.Problem)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Time)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        
                    </tr>
                }
            </table>
        </div>
    </div>
}



@model Hospital_System.Models.Attend

@{
    ViewBag.Title = "AttendDetails";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Attend Details</title>

    <style>
        /* Container styling */
        .container {
            margin-left: 198px;
        padding: 20px;
            margin-top: 1px;
            background-color: #fff;
            border: 1px solid #ddd;
            width: 672px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
        }

            /* Field styling */
            .container .field {
            margin-bottom: 15px;
            font-size: 16px;
        }

                .container .field strong {
            font-size: 18px;
        color: #003366;
                }

            .container .field {
        padding: 10px;
            background-color: #f9f9f9;
                border-radius: 3px;
        }

                .container .field:last-child {
            margin-bottom: 0;
        }

        /* Header styling */
        .header {
        padding: 14px 36px;
        background: #002147;
            margin-top: 27px;
            margin-left: 199px;
        width: 641px;
        color: white;
        }

        /* Button styling for PDF download */
#downloadBtn {
        background-color: #002147;
            color: white;
        font-size: 16px;
    padding: 10px 20px;
    border: none;
        border-radius: 5px;
    cursor: pointer;
        margin-top: 20px;
    display: block;
    width: 12%;
        text-align: center;
        margin-left: 440px;
    }

#downloadBtn:hover {
    background-color: #002147;
            }
    </style>

    <!-- Include html2pdf.js library -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.9.2/html2pdf.bundle.js"></script>
</head>

<body style="background-color: #e3e8ea;">
    <div id="AttendDetailsContent">

        <!-- Header Section -->
        <div class="header">
            <h4>Attend Details</h4>
        </div>

        <!-- Attend Details Container -->
        <div class="container">
            <div class="field">
                <strong>Id:</strong> <span>@Model.Id</span>
            </div>
            <div class="field">
                <strong>Name:</strong> <span>@Model.Name</span>
            </div>
            <div class="field">
                <strong>Department:</strong> <span>@Model.Department</span>
            </div>
            <div class="field">
                <strong>Job Title:</strong> <span>@Model.JobTitle</span>
            </div>
            <div class="field">
                <strong>Contact:</strong> <span>@Model.Contact</span>
            </div>
            <div class="field">
                <strong>Shift:</strong> <span>@Model.Shift</span>
            </div>
            <div class="field">
                <strong>Time:</strong> <span>@Model.Time</span>
            </div>
            <div class="field">
                <strong>Login Time:</strong> <span>@Model.LoginTime</span>
            </div>
            <div class="field">
                <strong>Logout Time:</strong> <span>@Model.LogoutTime</span>
            </div>
            <div class="field">
                <strong>Status:</strong> <span>@Model.Status</span>
            </div>
        </div>

    </div>

    <!-- Button to trigger PDF download -->
    <button id="downloadBtn" onclick="downloadPDF()">Download PDF</button>


    <script>
        function downloadPDF() {
            const element = document.getElementById("AttendDetailsContent");

            // Convert the attend details content to a PDF using html2pdf.js
            html2pdf()
                .from(element)
                .set({
                    filename: 'Attend_Details.pdf',  // Name of the downloaded file
                    html2canvas: { scale: 4 },  // Increase the scale for better quality
                    jsPDF: {
                        unit: "mm",  // Units for the PDF (millimeters)
                        format: "a4",  // Paper size (A4)
                        orientation: "Landscape",  // Portrait orientation
                        margins: { top: 15, bottom: 15, left: 15, right: 15 }  // Add margins to avoid clipping
                    }
                })
                .save();  // Save the PDF
        }
    </script>

</body>
</html>

@model IEnumerable<Hospital_System.Models.Attend>

@{
    ViewBag.Title = "AttendanceDetails";
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>AttendanceDetails</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f9f9f9;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
            font-size: 28px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            overflow: hidden;
        }

        th, td {
            padding: 12px;
            border: 1px solid #dddddd;
            text-align: left;
        }

        /* Table header styling */
        thead {
            background-color: #3498db; /* Static blue header color */
            color: white;
        }

        /* Zebra striping for rows */
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1; /* Highlight row on hover */
        }

        .back-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin-bottom: 20px;
            font-size: 16px;
        }

            .back-button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body>
    <!-- Back Button -->
    <div>
        <a href="javascript:history.back()" class="back-button">Back</a>
    </div>

    <h1> Attendance List </h1>
    <table>
        <thead>
            <tr>
                <th> ID</th>
                <th> Name</th>
                <th> Department</th>
                <th> JobTitle</th>
                <th> Contact</th>
                <th> Shift</th>
                <th> Time</th>
                <th> LoginTime</th>
                <th> LogoutTime</th>
                <th> Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Id)</td>
                    <td>@Html.DisplayFor(m => item.Name)</td>
                    <td>@Html.DisplayFor(m => item.Department)</td>
                    <td>@Html.DisplayFor(m => item.JobTitle)</td>
                    <td>@Html.DisplayFor(m => item.Contact)</td>
                    <td>@Html.DisplayFor(m => item.Shift)</td>
                    <td>@Html.DisplayFor(m => item.Time)</td>
                    <td>@Html.DisplayFor(m => item.LoginTime)</td>
                    <td>@Html.DisplayFor(m => item.LogoutTime)</td>
                    <td>@Html.DisplayFor(m => item.Status)</td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

@model IEnumerable<Hospital_System.Models.Attend>

@{
    ViewBag.Title = "AttendanceDetails";
    Layout = null;
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Saira:wght@500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/All css/css/bootstrap.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/All css/css/style.css" rel="stylesheet">
    <link href="~/All css/css/style-mob.css" rel="stylesheet">

    <link href="~/All css/animate/animate.css" rel="stylesheet" />
    <link href="~/All css/animate/animate.min.css" rel="stylesheet" />

    <!-- External styles for SweetAlert -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
</head>






    <div class="row">
        <div class="col-md-12" ">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <li class="page-back">
                        <a href="/Reception/Reception"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
                    </li>
                    <h4>Attendance List</h4>

                </div>

                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th> ID</th>
                                    <th> Name</th>
                                    <th> Department</th>
                                    <th> JobTitle</th>
                                    <th> Contact</th>
                                    <th> Shift</th>
                                    <th> Time</th>
                                    <th> LoginTime</th>
                                    <th> LogoutTime</th>
                                    <th> Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.Name)</td>
                                        <td>@Html.DisplayFor(m => item.Department)</td>
                                        <td>@Html.DisplayFor(m => item.JobTitle)</td>
                                        <td>@Html.DisplayFor(m => item.Contact)</td>
                                        <td>@Html.DisplayFor(m => item.Shift)</td>
                                        <td>@Html.DisplayFor(m => item.Time)</td>
                                        <td>@Html.DisplayFor(m => item.LoginTime)</td>
                                        <td>@Html.DisplayFor(m => item.LogoutTime)</td>
                                        <td>@Html.DisplayFor(m => item.Status)</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>


@model IEnumerable<Hospital_System.Models.AttendanceDo>

@{
    ViewBag.Title = "Attendance List";
    Layout = null;
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Saira:wght@500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/All css/css/bootstrap.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/All css/css/style.css" rel="stylesheet">
    <link href="~/All css/css/style-mob.css" rel="stylesheet">

    <link href="~/All css/animate/animate.css" rel="stylesheet" />
    <link href="~/All css/animate/animate.min.css" rel="stylesheet" />

    <!-- External styles for SweetAlert -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.css">
</head>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>

<script>
    function confirmDelete(deleteUrl) {
        swal({
            title: "Are you sure?",
            text: "You will not be able to recover this record!",
            icon: "warning",  // Updated to 'icon' instead of 'type'
            buttons: {
                cancel: "No, cancel!",
                confirm: {
                    text: "Yes, delete it!",
                    value: true,
                    visible: true,
                    className: "btn-danger",
                    closeModal: true
                }
            }
        })
            .then((willDelete) => {
                if (willDelete) {
                    // Make AJAX request to delete the record
                    $.ajax({
                        url: deleteUrl,
                        type: 'POST',
                        success: function (result) {
                            // Reload or update the table as needed
                            swal("Deleted!", "Your record has been deleted.", "success");
                            location.reload(); // Reload the page to see changes
                        },
                        error: function (err) {
                            swal("Error!", "There was a problem deleting the record.", "error");
                        }
                    });
                } else {
                    swal("Your record is safe!");
                }
            });
    }
</script>


@using (Html.BeginForm())
{
    <div class="sb2-2-3" style="position: absolute; width: 100%; margin-top: 20px">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-titles">
                        <li class="page-back">
                            <a href="/ReceptionAdmin/ReceptionFrontPage"><i class="fa fa-backward" aria-hidden="true" style="margin-top:25px;"></i> Back</a>
                        </li>
                        <input type="button" value="Add New" onclick="window.location.href='@Url.Action("AddAttendance", "AttendanceAdmin")'" class="my-btn" style="margin-top:13px;">
                        <h4 style="margin-left:400px;margin-top:-30px;font-size:30px;color:white;">Attendance List</h4>
                    </div>
                    <div class="tab-inn">
                        <div class="table-responsive table-desi">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Name</th>
                                        <th>Department</th>
                                        <th>Job Title</th>
                                        <th>Contact</th>
                                        <th>Shift</th>
                                        <th>Time</th>
                                        <th>LoginTime</th>
                                        <th>LogoutTime</th>
                                        <th>Status</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr id="row-@item.Id">
                                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Department)</td>
                                            <td>@Html.DisplayFor(modelItem => item.JobTitle)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Contact)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Shift)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Time)</td>
                                            <td>@Html.DisplayFor(modelItem => item.LoginTime)</td>
                                            <td>@Html.DisplayFor(modelItem => item.LogoutTime)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                            <td class="icon-container">
                                                <a href="@Url.Action("AttendanceEdit", new { Id = item.Id })" title="Edit">
                                                    <i class="fas fa-edit" style="color: blue; font-size: 10px; padding: 10px;"></i>
                                                </a>
                                                <a href="javascript:void(0);" onclick="confirmDelete('@Url.Action("AttendanceDelete", new { Id = item.Id })', @item.Id)">
                                                    <i class="fas fa-trash-alt" style="font-size: 10px; padding: 10px;color:red;"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .my-btn {
        color: #ffffff;
        background: #57666d;
        padding: 10px;
        line-height: 10px;
        font-weight: 1000;
    }

    .inn-titles {
        padding: 1px 25px;
        background: #002147;
        height: 70px;
    }
</style>

@model Hospital_System.Models.Billing

@{
    Layout = null; // Remove layout for the PDF
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Billing Details</title>

    <style>
        .container2 {
            background-color: white;
            padding: 20px;
            margin: 0;
            border-radius: 8px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .invoice-content {
            padding: 20px;
        }

        .invoice-item {
            margin-bottom: 20px;
        }

        .invoice-logo img {
            max-width: 200px;
        }

        .invoice-details {
            font-size: 14px;
            line-height: 1.6;
        }

        .invoice-info {
            font-size: 14px;
            margin-bottom: 10px;
        }

        .customer-text {
            font-weight: bold;
        }

        .invoice-table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .invoice-table th, .invoice-table td {
            padding: 10px;
            border: 1px solid #ddd;
        }

        .invoice-table th {
            background-color: #002147;
            color: white;
        }

        .invoice-table tbody tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .invoice-table-two th, .invoice-table-two td {
            padding: 8px;
        }

        .invoice-table-two th {
            text-align: left;
        }

        .text-muted {
            color: #888;
        }

        .other-info h4 {
            margin-top: 20px;
        }

        .text-right {
            text-align: right;
        }

        .text-center {
            text-align: center;
        }

        .ml-auto {
            margin-left: auto;
        }

        /* Style the download button */
        .download-btn {
            margin-top: 20px;
            background-color: #ef7d7d;
            color: white;
            padding: 10px 20px;
            border: none;
            cursor: pointer;
            font-size: 16px;
            border-radius: 5px;
        }

        .download-btn:hover {
            background-color: #e53e3e;
        }

        .table-responsive {
            min-height: .01%;
        }
    </style>
</head>

<script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>

<div class="container2" id="invoice">

    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="invoice-content">

                <div class="invoice-item">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="invoice-logo">
                                <h2>Invoice</h2>
                            </div>
                        </div>
                        <div class="col-md-6 text-right">
                            <h4>Issued: @Model.BillingDate.ToString()</h4>
                        </div>
                    </div>
                </div>

                <!-- Invoice From and To -->
                <div class="invoice-item">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="invoice-info">
                                <strong class="customer-text">Invoice From</strong>
                                <p class="invoice-details">
                                    Guru Nanak Hospital <br>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6 text-right">
                            <div class="invoice-info">
                                <strong class="customer-text">Invoice To</strong>
                                <p class="invoice-details">
                                    @Model.PatientName <br>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Payment Method -->
                <div class="invoice-item">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="invoice-info">
                                <strong class="customer-text">Payment Method</strong>
                                <p class="invoice-details">
                                    @Model.MethodOfPayment <br>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Billing Items Table -->
                <div class="invoice-item invoice-table-wrap">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="table-responsive">
                                <table class="invoice-table table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>Description</th>
                                            <th class="text-center">Quantity</th>
                                            <th class="text-center">GST</th>
                                            <th class="text-right">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Doctor Fee</td>
                                            <td class="text-center">1</td>
                                            <td class="text-center">18%</td>
                                            <td class="text-right">₹@Model.DoctorFee.ToString("N2")</td>
                                        </tr>
                                        <tr>
                                            <td>Treatment Charges</td>
                                            <td class="text-center">1</td>
                                            <td class="text-center">18%</td>
                                            <td class="text-right">₹@Model.TreatmentCharges.ToString("N2")</td>
                                        </tr>
                                        <tr>
                                            <td>Medicine Charges</td>
                                            <td class="text-center">1</td>
                                            <td class="text-center">18%</td>
                                            <td class="text-right">₹@Model.MedicineCharges.ToString("N2")</td>
                                        </tr>
                                        <tr>
                                            <td>Room Fee</td>
                                            <td class="text-center">1</td>
                                            <td class="text-center">18%</td>
                                            <td class="text-right">₹@Model.RoomFee.ToString("N2")</td>
                                        </tr>
                                        <tr>
                                            <td>Others</td>
                                            <td class="text-center">1</td>
                                            <td class="text-center">18%</td>
                                            <td class="text-right">₹@Model.OthersCost.ToString("N2")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <div class="col-md-6 col-xl-4 ml-auto">
                            <div class="table-responsive">
                                <table class="invoice-table-two table">
                                    <tbody>
                                        <tr>
                                            <th>Subtotal:</th>
                                            <td><span>₹@Model.TotalBill.ToString("N2")</span></td>
                                        </tr>
                                        <tr>
                                            <th>Discount:</th>
                                            <td><span>-10%</span></td>
                                        </tr>
                                        <tr>
                                            <th>Total Amount:</th>
                                            <td><span>₹@Model.TotalAmount.ToString("N2")</span></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>

<script>
    // Automatically trigger PDF download when the page loads
    window.onload = function () {
        const element = document.getElementById('invoice'); // Select the entire invoice content
        const options = {
            margin: 0,
            filename: 'billing_details.pdf',
            image: { type: 'jpeg', quality: 0.98 },
            html2canvas: { scale: 2, logging: true, useCORS: true },
            jsPDF: { unit: 'in', format: 'letter', orientation: 'Landscape' }
        };

        // Convert the invoice content (up to total amount) to PDF and automatically download it
        html2pdf().from(element).set(options).save();
    };
</script>

</html>

@model Hospital_System.Viewmodel.Allview

@{
    ViewBag.Title = "Complaint List";
    Layout = "~/Views/Shared/_LayoutPatientPage1.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

@using (Html.BeginForm())
{

    <div class="sb2-2" style="margin-top: 76px; height: 120vh;">
        <div class="sb2-2-2">
            <ul>
                <li>
                    <a href="/Patient/Dashboard"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
                </li>
                <li class="active-bre">
                    <a href="#"> ComplaintList</a>
                </li>
                <li class="page-back">
                    <a href="/Patient/Dashboard"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
                </li>
            </ul>
        </div>
    </div>

    <div class="row" style="margin-left: 272px;">
        <div class="col-md-12" style="margin-top:-610px;">
            <div class="box-inn-sp">
                <div class="inn-title">
                    <h4>Complaint List</h4>

                </div>

                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Name</th>
                                    <th>Complaint</th>
                                    <th>Phone Number</th>
                                    <th>Reply</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.mComplaints)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Complaint)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Replay)</td>
                                        <td>
                                            <a href="@Url.Action("CEdit", new { Id = item.Id })" class="edit-link" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
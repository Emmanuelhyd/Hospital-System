
@model IEnumerable<Hospital_System.Models.MComplaint>

@{
    ViewBag.Title = "Complaint List";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="table-container">
      
        <div style="margin-top: 240px;">
             <h2> List Of Complaints</h2>
            <table>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Complaint)</th>
                        <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                        <th>@Html.DisplayNameFor(model => model.Reply)</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                            <td>@Html.DisplayFor(modelItem => item.Name)</td>
                            <td>@Html.DisplayFor(modelItem => item.Complaint)</td>
                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                            <td>@Html.DisplayFor(modelItem => item.Reply)</td>
                            <td>
                                <a href="@Url.Action("CEdit", new { Id = item.Id })" class="edit-link" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        @Html.ActionLink("Back", "Dashboard", "Patient")
    </div>
}

<style>
    .table-container {
        padding: 20px;
        margin: 20px 0;
        position: absolute;
        margin-left: 262px;
        margin-top: -192px;
        width: 73%;
    }

    table {
        width: 100%; /* Full width */
        border-collapse: collapse;
        margin: 20px 0;
    }

    th, td {
        padding: 15px; /* Increased padding for better spacing */
        border: 1px solid #ddd;
        text-align: left;
    }

    th {
        background-color: #007bff;
        color: #fff; /* Changed text color to white for better contrast */
        font-weight: bold;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #e9ecef; /* Slightly lighter hover effect */
    }

    a {
        color: #007bff;
        text-decoration: none;
    }

        a:hover {
            text-decoration: underline;
        }

    /* Additional styles for the icon link */
    .edit-link {
        font-size: 1.2em; /* Adjust the size of the icon */
        color: #007bff; /* Ensure the icon is the same color */
    }
</style>


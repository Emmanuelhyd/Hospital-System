@model Hospital_System.Viewmodel.Allview@{    ViewBag.Title = "Register Complaint";    Layout = "~/Views/Shared/_PatientLayout.cshtml";}<!DOCTYPE html><html lang="en"><head>    <meta name="viewport" content="width=device-width" />    <title>Register Complaint</title>    <style>        body {            font-family: Arial, sans-serif;            background-color: #f4f4f4;            margin: 0;            padding: 0;        }        .form-container {            margin: 50px auto;            padding: 20px;            background-color: white;            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);            border-radius: 8px;            width: 90%;            / Responsive width / max-width: 600px;            / Maximum width /        }        h2 {            text-align: center;            margin-bottom: 20px;        }        label {            font-weight: bold;            margin-top: 10px;            display: block;        }        input[type="text"],        textarea {            width: 100%;            / Full width / padding: 10px;            margin-top: 5px;            border: 1px solid #ccc;            border-radius: 4px;            box-sizing: border-box;        }        textarea {            height: 100px;            resize: none;        }        input[type="submit"] {            background-color: #204fd1;            color: white;            border: none;            border-radius: 4px;            padding: 10px;            cursor: pointer;            width: 100%;            / Full width / margin-top: 20px;            transition: background-color 0.3s;        }            input[type="submit"]:hover {                background-color: #218838;            }        .btn-back {            color: white;            background-color: dodgerblue;            border: none;            border-radius: 4px;            padding: 10px;            cursor: pointer;            width: 100%;            / Full width / margin-top: 10px;        }            .btn-back:hover {                background-color: #0056b3;                / Darker shade on hover /            }        .text-danger {            color: #dc3545;        }    </style></head><body>    <div class="form-container">        @using (Html.BeginForm("RegisterComplaint", "Complaint"))        {<h2>Register Your Complaints!</h2><div>    @Html.LabelFor(m => m.mComplaint.Id)    @Html.TextBoxFor(m => m.mComplaint.Id, new { @class = "form-control", @placeholder = "Enter Complaint ID" })</div><div>    @Html.LabelFor(m => m.mComplaint.Name)    @Html.TextBoxFor(m => m.mComplaint.Name, new    {        @class = "form-control",        @placeholder = "Enter Your Name",        @required = "required",        @pattern = "^[A-Za-z\\s]+$",        @title = "Please enter a valid name (letters and spaces only)"    })    @Html.ValidationMessageFor(m => m.mComplaint.Name, "", new { @class = "text-danger" })</div><div>    @Html.LabelFor(m => m.mComplaint.Complaint)    @Html.TextAreaFor(m => m.mComplaint.Complaint, new { @class = "form-control", @placeholder = "Describe your complaint", @required = "required" })</div><div>    @Html.LabelFor(m => m.mComplaint.PhoneNumber)    @Html.TextBoxFor(m => m.mComplaint.PhoneNumber, new    {        @required = "required",        @placeholder = "Phone Number",        @class = "form-control",        @pattern = @"^[6789]\d{9}$", // Regex pattern for 10-digit phone number        @title = "Please enter a valid 10-digit phone number starting with 6, 7, 8, or 9."    })    @Html.ValidationMessageFor(m => m.mComplaint.PhoneNumber, "", new { @class = "text-danger" })</div><div>    <input type="submit" value="Register Complaint"></div><div>    <button type="button" class="btn-back" onclick="Back()">Back</button></div>}    </div>    <script>        function Back() {            window.location.href = "/Patient/Dashboard";        }    </script></body></html>
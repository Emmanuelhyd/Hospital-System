@model Hospital_System.Dash.DashboardDetails

@{
    ViewBag.Title = "Add Complaint";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("AddComplaintAd", "ComplaintAd"))
{
    <div class="container" style="background-color: white; padding: 20px; margin-top: 18px;">
        <h2>Add Complaint</h2>

        <div class="form-group">
            <label for="Id">Id</label>
            @Html.TextBoxFor(m => m.mComplaintAd.Id, new { @class = "form-control", @readonly = "readonly" })
        </div>

        <div class="form-group">
            <label for="Name">Name</label>
            @Html.TextBoxFor(m => m.mComplaintAd.Name, new { @class = "form-control", @required = "required", @placeholder = "Name" })
        </div>

        <div class="form-group">
            <label for="Complaint">Complaint</label>
            @Html.TextBoxFor(m => m.mComplaintAd.Complaint, new { @class = "form-control", @required = "required", @placeholder = "Complaint" })
        </div>

        <div class="form-group">
            <label for="PhoneNumber">Phone Number</label>
            @Html.TextBoxFor(m => m.mComplaintAd.PhoneNumber, new
            {
                @class = "form-control",
                @required = "required",
                @placeholder = "Enter Phone Number",
                @pattern = @"^[6789]\d{9}$",
                @title = "Enter a valid 10-digit phone number starting with 6, 7, 8, or 9."
            })
            @Html.ValidationMessageFor(m => m.mComplaintAd.PhoneNumber, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label for="Replay">Replay</label>
            @Html.TextBoxFor(m => m.mComplaintAd.Replay, new { @class = "form-control", @placeholder = "Replay" })
        </div>

        <div class="form-actions">
            <input type="submit" value="Submit" class="btn btn-success">
            <button type="button" class="btn btn-primary back-button" onclick="Back()">Back</button>
        </div>
    </div>
}

<style>
    .container {
        width: 85%;
        margin-left: 15%;
        border-radius: 8px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .text-danger {
        color: red;
        font-size: 0.9em;
        margin-top: -10px;
        margin-bottom: 10px;
    }

    .btn {
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-success {
        background-color: #4CAF50;
        color: white;
    }

        .btn-success:hover {
            background-color: #45a049;
        }

    .back-button {
        background-color: #007bff;
        color: white;
    }

        .back-button:hover {
            background-color: #0056b3;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .back-button:focus {
            outline: none;
        }
</style>

<script>
    function Back() {
        window.location.href = "/Dashboard/DashboardView";
    }
</script>

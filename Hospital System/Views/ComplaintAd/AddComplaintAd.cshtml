@model Hospital_System.Dash.DashboardDetails

@{
    ViewBag.Title = "Add Complaint";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("AddComplaintAd", "ComplaintAd"))
{
    <div class="container">
        <h2>Add Complaint</h2>

        <!-- Flex container to group form fields side by side -->
        <div class="form-fields">
            <div class="form-group">
                <label for="Id">Id</label>
                @Html.TextBoxFor(m => m.mComplaintAd.Id, new { @class = "form-control", @readonly = "readonly" })
            </div>

            <div class="form-group">
                <label for="Name">Name</label>
                @Html.TextBoxFor(m => m.mComplaintAd.Name, new { @class = "form-control", @required = "required", @placeholder = "Name" })
            </div>
        </div>

        <!-- Flex container to group form fields side by side -->
        <div class="form-fields">
            <div class="form-group">
                <label for="Complaint">Complaint</label>
                @Html.TextBoxFor(m => m.mComplaintAd.Complaint, new { @class = "form-control", @required = "required", @placeholder = "Complaint" })
            </div>

            <div class="form-group">
                <label for="PhoneNumber">Phone Number</label>
                @Html.TextBoxFor(m => m.mComplaintAd.PhoneNumber, new
                {
                    @class = "form-control",
                    @required = "required",
                    @placeholder = "Enter Phone Number",
                    @pattern = @"^[6789]\d{9}$",
                    @title = "Enter a valid 10-digit phone number starting with 6, 7, 8, or 9."
                })
                @Html.ValidationMessageFor(m => m.mComplaintAd.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- Single column for 'Replay' -->
        <div class="form-group">
            <label for="Replay">Replay</label>
            @Html.TextBoxFor(m => m.mComplaintAd.Replay, new { @class = "form-control", @placeholder = "Replay" })
        </div>

        <div class="form-actions">
            <input type="submit" value="Submit" class="btn btn-success">
            <button type="button" class="btn btn-primary back-button" onclick="Back()">Back</button>
        </div>
    </div>
}

<style>
    /* Main container styling */
    .container {
        background-color: white;
        padding: 20px;
        margin-top: 18px;
        width: 85%;
        margin-left: 15%;
        border-radius: 8px;
    }

    /* Flex container for side-by-side form fields */
    .form-fields {
        display: flex;
        justify-content: space-between;
        gap: 20px; /* Space between the form fields */
        flex-wrap: wrap; /* Allows wrapping to next line if space is insufficient */
    }

    /* Form field container */
    .form-group {
        flex: 1 1 calc(50% - 20px); /* Ensure two fields fit side by side, adjusting for gap */
        margin-bottom: 15px;
    }

    /* Label styling */
    label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    /* Input styling */
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    /* Error message styling */
    .text-danger {
        color: red;
        font-size: 0.9em;
        margin-top: -10px;
        margin-bottom: 10px;
    }

    /* Button styling */
    .btn {
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .btn-success {
        background-color: #4CAF50;
        color: white;
    }

    .btn-success:hover {
        background-color: #45a049;
    }

    .back-button {
        background-color: #007bff;
        color: white;
    }

    .back-button:hover {
        background-color: #0056b3;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .back-button:focus {
        outline: none;
    }

    /* Form action buttons styling */
    .form-actions {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    /* Responsiveness for smaller screens */
    media (max-width: 768px) {
        .form-fields {
            flex-direction: column; /* Stack fields vertically on small screens */
        }

        .form-group {
            flex: 1 1 100%; /* Ensure each form group takes full width on small screens */
        }

        .container {
            width: 100%;
            margin-left: 0;
            padding: 10px;
        }

        .btn {
            width: 100%;
        }
    }
</style>

<script>
    function Back() {
        window.location.href = "/Dashboard/DashboardView";
    }
</script>








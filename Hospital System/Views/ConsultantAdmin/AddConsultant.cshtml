@model Hospital_System.Models.ConsultantDo

@{
    ViewBag.Title = "AddConsultant";
    Layout = "~/Views/Shared/_LayoutRec.cshtml";

}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">



@using (Html.BeginForm("AddConsultant", "ConsultantAdmin", FormMethod.Post))
{
    <div class="sb2-2" style="height: 100%; position: absolute; margin-top: 65px;">
        <div class="sb2-2-2" style="margin-left:30px;">
            <ul>
                <li>
                    <a href="/ReceptionAdmin/ReceptionFrontPage"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
                </li>
                <li class="active-bre">
                    <a href="#">Add New Doctor</a>
                </li>
                <li class="page-back">
                    <a href="/ReceptionAdmin/ReceptionFrontPage"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
                </li>
            </ul>
        </div>
    </div>

    <div style="padding: 14px 36px; background: #002147; margin-top:145px; margin-left: 25%; width: 70%; color:white;position:absolute;">
        <h4 style="color:white;">Add New Doctor</h4>
    </div>



    <div class="form-container">
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.DoctorId)
                @Html.TextBoxFor(m => m.DoctorId, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FullName)
                @Html.TextBoxFor(m => m.FullName, new { @required = "required", @placeholder = "FullName", @class = "form-control" })
            </div>
        </div>

        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.Email)
                @Html.TextBoxFor(m => m.Email, new
           {
               @class = "form-control",
               @required = "required",
               @placeholder = "Email",
               @type = "email",
               @title = "Enter a valid email address like anandsagar@gmail.com"
           })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Department)
                @Html.TextBoxFor(m => m.Department, new { @required = "required", @placeholder = "Department", @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.Designation)
                @Html.TextBoxFor(m => m.Designation, new { @required = "required", @placeholder = "Designation", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PhoneNo)
                @Html.TextBoxFor(m => m.PhoneNo, new
           {
               @class = "form-control",
               @required = "required",
               @placeholder = "Mobile Number",
               @pattern = @"^[6789]\d{9}$",
               @title = "Enter a valid mobile number starting with 7, 8, or 9 followed by 9 digits."
           })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.ContactNo)
                @Html.TextBoxFor(m => m.ContactNo, new
           {
               @class = "form-control",
               @required = "required",
               @placeholder = "e.g., 0401234567",
               @pattern = @"^040-\d{7}$",
               @title = "Enter a valid Hyderabad landline number starting with 040."
           })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Education)
                @Html.TextBoxFor(m => m.Education, new { @required = "required", @placeholder = "Education", @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.Gender)
                @Html.DropDownListFor(m => m.Gender, new SelectList(new List<SelectListItem>
                            {

                        new SelectListItem { Value = "Male", Text = "Male" },
                                    new SelectListItem { Value = "Female", Text = "Female" },
                                     new SelectListItem { Value = "Others", Text = "Others" },

                            }, "Value", "Text"), "Select Gender", new { @class = "form-control", @required = "required", })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Status)
                @Html.DropDownListFor(m => m.Status, new SelectList(new List<SelectListItem>
                    {
                    new SelectListItem { Value = "Active", Text = "Active" },
                    new SelectListItem { Value = "InActive", Text = "InActive" },
                    },
                    "Value", "Text"), "Status", new { @class = "form-control", @required = "required" })
            </div>
        </div>
        <div style="display: flex; justify-content: center; ">
            <input type="submit" class="btn-submit" value="Submit" style="border-color: #e74715">

        </div>
    </div>
}


<style>
    .form-container {
        position: absolute;
        width: 70%;
        margin-top: 200px;
        background-color: #ffffff;
        margin-left: 25%;
    }

    .form-row {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
    }

    .form-group {
        flex: 1;
        min-width: 250px;
        margin-bottom: 20px;
        margin-left: 30px;
    }

        .form-group label {
            font-weight: bold;
            margin-bottom: 5px;
            display: block;
        }

    .form-control {
        width: 95%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
        height: 42px;
    }

        .form-control:focus {
            border-color: #007bff;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 123, 255, .6);
        }

    .btn-primary {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px 15px;
        border-radius: 4px;
        cursor: pointer;
        width: 100%;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .text-danger {
        color: #dc3545;
    }

    .validation-summary {
        margin-bottom: 15px;
        color: #dc3545;
    }

    .btn {
        color: white;
        background-color: dodgerblue;
        border: none;
        border-radius: 5px;
        padding: 10px 15px;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
        width: 30%;
    }

        .btn:hover {
            background-color: #0056b3;
        }
</style>

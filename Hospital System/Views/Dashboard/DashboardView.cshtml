                                <th>Gender</th>
                                <th>Status</th>
                                @*<th>Action</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.mDoctorAds)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.DoctorId)</td>

@model Hospital_System.Dash.DashboardDetails

@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm())
{
    <div id="dashboard">
        <div class="link-container" id="tab1">
            <a href="/Department/DepartmentList" class="link">
                <div class="icon">
                    <i class="fa fa-building"></i>
                </div>
                <p class="count">@Model.MDepartmentCount</p>
                <span class="tag">Department</span>
            </a>
        </div>
        <div class="link-container" id="tab2">
            <a href="/DoctorAd/DoctorListAd" class="link">
                <div class="icon">
                    <i class="fa fa-user-md"></i>
                </div>
                <p class="count">@Model.MDoctorCount</p>
                <span class="tag">Doctors</span>
            </a>
        </div>
        <div class="link-container" id="tab3">
            <a href="/PatientAd/PatientList" class="link">
                <div class="icon">
                    <i class="fa fa-user"></i>
                </div>
                <p class="count">@Model.MPatientCount</p>
                <span class="tag">Patients</span>
            </a>
        </div>
        <div class="link-container" id="tab4">
            <a href="/AppointmentAd/AppointmentList" class="link">
                <div class="icon">
                    <i class="fa fa-calendar-check"></i>
                </div>
                <p class="count">@Model.MAppointmentCount</p>
                <span class="tag">Appointment</span>
            </a>
        </div>
        <div class="link-container" id="tab5">
            <a href="/MedicineAd/MedicineAdList" class="link">
                <div class="icon">
                    <i class="fa fa-capsules"></i>
                </div>
                <p class="count">@Model.MMedicineAdCount</p>
                <span class="tag">Medicine</span>
            </a>
        </div>
        <div class="link-container" id="tab6">
            <a href="/ComplaintAd/ComplaintAdList" class="link">
                <div class="icon">
                    <i class="fa fa-frown"></i>
                </div>
                <p class="count">@Model.MComplaintAdCount</p>
                <span class="tag">Complaint</span>
            </a>
        </div>
        <div class="link-container" id="tab7">
            <a href="/AnnouncementAd/AnnouncementList" class="link">
                <div class="icon">
                    <i class="fa fa-bullhorn"></i>
                </div>
                <p class="count">@Model.MAnnouncementCount</p>
                <span class="tag">Announcement</span>
            </a>
        </div>
        <div class="link-container" id="tab8">
            <a href="/AmbulanceAd/AmbulanceListAd" class="link">
                <div class="icon">
                    <i class="fas fa-ambulance"></i>
                </div>
                <p class="count">@Model.MAmbulanceCount</p>
                <span class="tag">Ambulance</span>
            </a>
        </div>
    </div>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
        background-color: #f4f4f4;
    }

    #dashboard {
        display: flex;
        flex-wrap: wrap; /* Wraps items to the next line */
        justify-content: center; /* Center items horizontally */
        padding: 20px;
        gap: 20px; /* Adds space between items */
    }

    .link-container {
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        text-align: center;
        padding: 20px;
        width: 200px; /* Set box width */
        height: 200px; /* Set box height */
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        margin-left: 50px;
    }

        .link-container:hover {
            background-color: #59b4ef;
            box-shadow: 0 6px 12px rgba(0, 0, 0, 0.15);
        }

    .icon {
        font-size: 36px;
        margin-bottom: 15px;
        color: palevioletred    }

    .count {
        font-size: 28px;
        color: #343a40;
        margin: 10px 0;
    }

    .tag {
        font-weight: 900;
        color: blue;
    }

        .tag:hover {
            background-color: #0056b3;
        }
</style>

@model Hospital_System.Dash.DashboardDetails


@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@using (Html.BeginForm())
{
    <div style="width:100%">
        <div>
            <div id="tab1" class="link-container">
                <a href="#" class="link">
                    <div class="icon">
                        <i class="fa fa-building"></i>
                    </div>
                    <p class="count">
                        @Model.MDepartmentCount
                    </p>
                    <span class="tag">@Html.ActionLink("Department", "DepartmentList", "Department")</span>
                </a>
            </div>
            <div id="tab2" class="link-container">
                <a href="#" class="link">
                    <div class="icon">
                        <i class="fa fa-user-md"></i>
                    </div>
                    <p class="count">@Model.MDoctorCount</p>
                    <span class="tag">@Html.ActionLink("Doctors", "DoctorListAd", "DoctorAd")</span>
                </a>
            </div>
            <div id="tab3" class="link-container">
                <a href="#" class="link">
                    <div class="icon">
                        <i class="fa fa-user"></i>
                    </div>
                    <p class="count">@Model.MPatientCount</p>
                    <span class="tag">@Html.ActionLink("Patients", "PatientList", "PatientAd")</span>
                </a>
            </div>
            <div id="tab4" class="link-container">
                <a href="Ambulanceses" class="link">
                    <div class="icon">
                        <i class="fa fa-calendar-check"></i>
                    </div>
                    <p class="count">@Model.MAppointmentCount</p>
                    <span class="tag">@Html.ActionLink("Appointments", "AppointmentList", "AppointmentAd")</span>
                </a>
            </div>
            <div id="tab5" class="link-container">
                <a href="#" class="link">
                    <div class="icon">
                        <i class="fa fa-capsules"></i>

                    </div>
                    <p class="count">@Model.MMedicineAdCount</p>
                    <span class="tag">@Html.ActionLink("Medicine", "MedicineAdList", "MedicineAd")</span>
                </a>
            </div>
            <div id="tab6" class="link-container">
                <a href="#" class="link">
                    <div class="icon">
                        <i class="fa fa-frown"></i>
                    </div>
                    <p class="count">@Model.MComplaintAdCount</p>
                    <span class="tag">@Html.ActionLink("Complaints", "ComplaintAdList", "ComplaintAd")</span>
                </a>
            </div>
            <div id="tab7" class="link-container">
                <a href="medicals" class="link">
                    <div class="icon">
                        <i class="fa fa-bullhorn"></i>
                    </div>
                    <p class="count">
                        @Model.MAnnouncementCount
                    </p>
                    <span class="tag">@Html.ActionLink("Announcements", "AnnouncementList", "AnnouncementAd")</span>
                </a>
            </div>
            <div id="tab8" class="link-container">
                <a href="Drive" class="link">
                    <div class="icon">
                        <i class="fas fa-ambulance"></i>
                    </div>
                    <p class="count">
                        @Model.MAmbulanceCount
                    </p>
                    <span class="tag">@Html.ActionLink("Ambulance", "AmbulanceListAd", "AmbulanceAd")</span>
                </a>
            </div>


        </div>
    </div>
}



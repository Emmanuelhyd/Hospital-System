@model Hospital_System.Dash.DashboardDetails

@{
    ViewBag.Title = "DepartmentList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script>
    function CreateNew() {
        window.location.href = 'AddDepartment';
    }
</script>

@using (Html.BeginForm())
{
    <div style="width: 100%; background-color: white; margin: 44px auto; padding: 20px; border-radius: 8px;">
        <h2 style="text-align: center;">Department List</h2>
        <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px;">
            <div>
                <input type="button" value="Create New" onclick="CreateNew()" style="margin-right: 10px;">
                <input type="search" id="dep" name="dep" placeholder="Search Department" style="padding: 10px; width: 200px; border: 1px solid #ccc; border-radius: 4px;">
                <input type="submit" value="Search" style="padding: 10px 15px;">
            </div>
        </div>

        <table>
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Department Name</th>
                    <th>Description</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.mDepartments)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.DepartmentName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td style="display: flex; gap: 10px;">
                            <a href="@Url.Action("DLEdit", new { Id = item.Id })" title="Edit">
                                <i class="fas fa-edit" style="color:blue;"></i>
                            </a>
                            <a href="@Url.Action("DLDelete", new { Id = item.Id })" title="Delete">
                                <i class="fas fa-trash-alt" style="color:red;"></i>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background-color: #f4f4f4;
    }

    h2 {
        color: #333;
        margin-bottom: 20px;
    }

    input[type="button"], input[type="submit"] {
        padding: 10px 15px;
        margin-right: 10px;
        border: none;
        background-color: #3051bd;
        color: white;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

    input[type="button"]:hover, input[type="submit"]:hover {
        background-color: #25499b; /* Darker shade for hover */
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: white;
        border-radius: 8px;
        overflow: hidden; /* Rounded corners */
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    th, td {
        padding: 10px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

  
    

        input[type="button"], input[type="submit"] {
            padding: 8px 10px;
        }

        th, td {
            font-size: 14px;
        }
    }
</style>

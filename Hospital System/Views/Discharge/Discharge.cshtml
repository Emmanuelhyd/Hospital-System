@model IEnumerable<Hospital_System.Models.DischargPatient>

@{
    ViewBag.Title = "Discharge";
    Layout = "~/Views/Shared/_LayoutPatRec.cshtml";
}




<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Saira:wght@500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/All css/css/bootstrap.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/All css/css/style.css" rel="stylesheet">
    <link href="~/All css/css/style-mob.css" rel="stylesheet">

    <link href="~/All css/animate/animate.css" rel="stylesheet" />
    <link href="~/All css/animate/animate.min.css" rel="stylesheet" />

    <!-- External styles for SweetAlert -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
</head>

<div class="sb2-2" style="margin-top: 76px; height: 150vh;">
    <div class="sb2-2-2">
        <ul>
            <li>
                <a href="/Reception/Reception"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
            </li>
            <li class="active-bre">
                <a href="#"> Discharge</a>
            </li>
            <li class="page-back">
                <a href="/Reception/Reception"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
            </li>
        </ul>
    </div>





    <div class="row">
        <div class="col-md-12" ">
            <div class="box-inn-sp">
                <div class="inn-title">
                    @*<li class="page-back">
            <a href="/Reception/Reception"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
        </li>*@
                    <h4>Discharge List</h4>
                    <input type="button" value="Add New" style="position: absolute; margin-left: 189px; margin-top: -3px; color: white; background-color: #58b392; border-color: #58b392; border-radius: 5px; width: 7%; height: 36px; " onclick="window.location.href='@Url.Action("AddDischarge", "Discharge")'">
                    <form method="get" action="@Url.Action("Discharge", "Discharge")">
                        <div class="form-container" style="margin-left: 307px;">
                            <label for="patientId" style="font-size: 15px; color: white; font-weight: 400; line-height: 24px; ">ID</label>
                            <input type="number" id="patientId" name="patientId" placeholder="Enter Patient ID" style="width: 41%; height: 4%" />
                            <button type="submit" style="background-color: #58b392; border-color: #58b392; color: white; width: 14%; height: 4%; ">Search</button>
                        </div>
                </div>

                <div class="tab-inn">
                    <div class="table-responsive table-desi">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(m => m.PatientId)</th>
                                    <th>@Html.DisplayNameFor(m => m.PatientName)</th>
                                    <th>@Html.DisplayNameFor(m => m.Reason)</th>
                                    <th>@Html.DisplayNameFor(m => m.AdmissionDate)</th>
                                    <th>@Html.DisplayNameFor(m => m.ProcedureandTreatment)</th>
                                    <th>@Html.DisplayNameFor(m => m.TreatmentDuration)</th>
                                    <th>@Html.DisplayNameFor(m => m.DischargeDate)</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.PatientId)</td>
                                        <td>@Html.DisplayFor(m => item.PatientName)</td>
                                        <td>@Html.DisplayFor(m => item.Reason)</td>
                                        <td>@Html.DisplayFor(m => item.AdmissionDate)</td>
                                        <td>@Html.DisplayFor(m => item.ProcedureandTreatment)</td>
                                        <td>@Html.DisplayFor(m => item.TreatmentDuration)</td>
                                        <td>@Html.DisplayFor(m => item.DischargeDate)</td>


                                        <td style="display:flex;gap:5px;">

                                            <a href="@Url.Action("DischargeId", "Discharge", new { PatientId = item.PatientId })">   <i class="fas fa-eye"></i> </a>


                                            <a href="@Url.Action("DischargeE", new { PatientId = item.PatientId })">
                                                <i class="fas fa-edit" style="font-size: 20px; color: blue; background: none; margin-top: -5px;"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
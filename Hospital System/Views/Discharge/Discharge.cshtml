@model IEnumerable<Hospital_System.Models.DischargPatient>

@{
    ViewBag.Title = "Discharge";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Discharge Summary</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f4;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        /* Back Button Styling */
        .back-button {
            display: inline-block;
            padding: 10px 15px;
            background-color: #007BFF;
            color: white;
            font-size: 14px;
            font-weight: bold;
            border-radius: 5px;
            text-decoration: none;
            margin-bottom: 20px;
            transition: background-color 0.3s ease;
        }

            .back-button:hover {
                background-color: #0056b3;
            }

            .back-button:active {
                background-color: #003f7f;
            }

        table {
            width: 100%;
            border-collapse: collapse; /* Ensures borders collapse together */
            margin: 20px 0;
            background-color: #fff;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd; /* Adds border to columns and rows */
        }

        th {
            background-color: #007BFF;
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        a {
            color: #007BFF;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        .form-container {
            margin-bottom: 20px;
        }

            .form-container label {
                font-size: 14px;
                margin-right: 10px;
            }

            .form-container input {
                padding: 8px;
                font-size: 14px;
                border: 1px solid #ddd;
                border-radius: 4px;
            }

            .form-container button {
                padding: 8px 12px;
                background-color: #007BFF;
                color: white;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

                .form-container button:hover {
                    background-color: #0056b3;
                }
    </style>
</head>

<body>

    <!-- Back Button -->
    <a href="javascript:history.back()" class="back-button">Back</a>

    <h1>Discharge</h1>

    <form method="get" action="@Url.Action("Discharge", "Discharge")">
        <div class="form-container">
            <label for="patientId">ID</label>
            <input type="number" id="patientId" name="patientId" placeholder="Enter Patient ID" />
            <button type="submit">Search</button>
        </div>
    </form>

    <div>
        <table>
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(m => m.PatientId)</th>
                    <th>@Html.DisplayNameFor(m => m.PatientName)</th>
                    <th>@Html.DisplayNameFor(m => m.Reason)</th>
                    <th>@Html.DisplayNameFor(m => m.AdmissionDate)</th>
                    <th>@Html.DisplayNameFor(m => m.ProcedureandTreatment)</th>
                    <th>@Html.DisplayNameFor(m => m.TreatmentDuration)</th>
                    <th>@Html.DisplayNameFor(m => m.DischargeDate)</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => item.PatientId)</td>
                        <td>@Html.DisplayFor(m => item.PatientName)</td>
                        <td>@Html.DisplayFor(m => item.Reason)</td>
                        <td>@Html.DisplayFor(m => item.AdmissionDate)</td>
                        <td>@Html.DisplayFor(m => item.ProcedureandTreatment)</td>
                        <td>@Html.DisplayFor(m => item.TreatmentDuration)</td>
                        <td>@Html.DisplayFor(m => item.DischargeDate)</td>
                        <td><a href="@Url.Action("DischargeId", "Discharge", new { PatientId = item.PatientId })">View</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

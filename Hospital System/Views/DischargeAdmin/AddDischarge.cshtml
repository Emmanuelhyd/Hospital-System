@model Hospital_System.Models.DischargeDo

@{
    ViewBag.Title = "AddDischarge";
    Layout = null;

}



@using (Html.BeginForm("AddDischarge", "DischargeAdmin", FormMethod.Post, new { @class = "form-container" }))
{
    <div style="padding: 14px 36px; background: #002147; width: 100%; color:white;position:absolute;">
        <h4 style="margin-left:500px;margin-top:-5px;font-size:20px;">Add Disharge summary</h4>
    </div>


    <div class="form-container">
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.PatientId)
                @Html.TextBoxFor(m => m.PatientId, new { @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.PatientName)
                @Html.TextBoxFor(m => m.PatientName, new { @required = "required", @placeholder = "Patient Name", @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.Reason)
                @Html.TextBoxFor(m => m.Reason, new { @required = "required", @placeholder = "Reason",@class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Findings)
                @Html.TextBoxFor(m => m.Findings, new { @required = "required", @placeholder = "Findings" , @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.Labreports)
                @Html.TextBoxFor(m => m.Labreports, new { @required = "required", @placeholder = "Lab Reports", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ProcedureandTreatment)
                @Html.TextBoxFor(m => m.ProcedureandTreatment, new { @required = "required", @placeholder = "Procedure and Treatment", @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.FurtherInstruction)
                @Html.TextBoxFor(m => m.FurtherInstruction, new { @required = "required", @placeholder = "Further Instruction" , @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.AdmissionDate)
                @Html.TextBoxFor(m => m.AdmissionDate, new { @required = "required", @placeholder = "Admission Date", @type = "date", @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.DischargeDate)
                @Html.TextBoxFor(m => m.DischargeDate, new { @required = "required", @placeholder = "Discharge Date", @type = "date" , @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TreatmentDuration)
                @Html.TextBoxFor(m => m.TreatmentDuration, new { @required = "required", @placeholder = "Treatment Duration", @class = "form-control" })
            </div>
        </div>
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.DischargeAmount)
                @Html.TextBoxFor(m => m.DischargeAmount, new { @required = "required", @placeholder = "Discharge Amount", @class = "form-control" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FollowUp)
                @Html.TextBoxFor(m => m.FollowUp, new { @required = "required", @placeholder = "Follow Up", @class = "form-control" })
            </div>
        </div>
        <div style="display: flex; justify-content: center; ">
            <input type="submit" class="btn-submit" value="Submit" style="border-color: #e74715">
            <input type="button" class="btn-submit" value="Back" style="border-color: #e74715" onclick="window.location.href='/ReceptionAdmin/ReceptionFrontPage';">

        </div>
    </div>

}




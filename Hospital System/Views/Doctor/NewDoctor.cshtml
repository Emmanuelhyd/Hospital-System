        padding: 12px 25px; /* Increased padding for buttons */
        border: none;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s; /* Smooth transition for button hover effects */
    }

    .btn-primary {
        background-color: #007BFF;
        color: white;
        width: 101px;
        margin-left: 174px;
    }

        .btn-primary:hover {

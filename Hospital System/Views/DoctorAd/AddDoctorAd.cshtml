@model Hospital_System.Dash.DashboardDetails

@{
    ViewBag.Title = "AddDoctorAd";
    //Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
    Layout = "~/Views/Shared/_LayoutTech.cshtml";
}

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">



@using (Html.BeginForm("AddDoctorAd", "DoctorAd"))
{
    //common
    <div class="sb2-2" style="height: 100%; position: absolute; margin-top: 65px;">
        <div class="sb2-2-2" style="margin-left:30px;">
            <ul>
                <li>
                    <a href="/Dashboard/DashboardView"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
                </li>
                <li class="active-bre">
                    <a href="#"> Doctors</a>
                </li>
                <li class="page-back" >
                    <a href="/Dashboard/DashboardView"><i class="fa fa-backward" aria-hidden="true" ></i> Back</a>
                </li>
            </ul>
        </div>
    </div>

    //heading
    <div style="padding: 14px 36px; background: #002147; margin-top:145px; margin-left: 25%; width: 70%; color:white;position:absolute;">
        <h4>Add Doctors</h4>
    </div>

    <div class="form-container">
        @*//row 1*@
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.MDoctorAd.DoctorId)
                @Html.TextBoxFor(m => m.MDoctorAd.DoctorId, new { @class = "form-control", @readonly = "readonly" }) <!-- Read-only if auto-generated -->
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.MDoctorAd.FullName, "FullName")
                @Html.TextBoxFor(m => m.MDoctorAd.FullName, new
                {
                    @class = "form-control",
                    @placeholder = "FullName ",
                    @required = "required",
                    @pattern = "^[A-Za-z\\s]+$",
                    @title = "Please enter a valid name (letters and spaces only)"
                })
            </div>
        </div>

        @*//row2*@
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.MDoctorAd.Email, "Email")
                @Html.TextBoxFor(m => m.MDoctorAd.Email, new
           {
               @class = "form-control",
                    @required = "required",
               @placeholder = "Email",
               @type = "email",
               @title = "Enter a valid email address like anandsagar@gmail.com"
           })
                @Html.ValidationMessageFor(m => m.MDoctorAd.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MDoctorAd.Department, "Department")
                @Html.TextBoxFor(m => m.MDoctorAd.Department, new
                {
                    @class = "form-control",
                    @placeholder = "Department Name",
                    @required = "required",
                    @pattern = "^[A-Za-z\\s]+$",
                    @title = "Please enter a valid name (letters and spaces only)"
                })
            </div>
        </div>

        @*//row3*@
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.MDoctorAd.Designation, "Designation")
                @Html.TextBoxFor(m => m.MDoctorAd.Designation, new
                {
                    @class = "form-control",
                    @placeholder = "Designation Name",
                    @required = "required",
                    @pattern = "^[A-Za-z\\s]+$",
                    @title = "Please enter a valid name (letters and spaces only)"
                })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.MDoctorAd.PhoneNo, "PhoneNo")
                @Html.TextBoxFor(m => m.MDoctorAd.PhoneNo, new
           {
               @class = "form-control",
               @required = "required",
               @placeholder = "Mobile Number",
               @pattern = @"^[6789]\d{9}$",
               @title = "Enter a valid mobile number starting with 7, 8, or 9 followed by 9 digits."
           })
            </div>
        </div>

        @*//row4*@
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.MDoctorAd.ContactNo, "Contact No")
                @Html.TextBoxFor(m => m.MDoctorAd.ContactNo, new
           {
               @class = "form-control",
               @required = "required",
               @placeholder = "e.g., 0401234567",
               @pattern = @"^040-\d{7}$",
               @title = "Enter a valid Hyderabad landline number starting with 040."
           })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.MDoctorAd.Education, "Education")
                @Html.TextBoxFor(m => m.MDoctorAd.Education, new { @class = "form-control", @required = "required", @placeholder = "Education" })
            </div>
        </div>

        @*//row5*@
        <div class="form-row">
            <div class="form-group">
                @Html.LabelFor(m => m.MDoctorAd.Gender, "Gender")
                @Html.DropDownListFor(m => m.MDoctorAd.Gender, new SelectList(new List<SelectListItem>
                {
                    new SelectListItem { Value = "Male", Text = "Male" },
                    new SelectListItem { Value = "Female", Text = "Female" },
                    new SelectListItem { Value = "Others", Text = "Others" },
                }, "Value", "Text"), "Select Gender", new { @class = "form-control", @required = "required" })
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.MDoctorAd.Status, "Status")
                @Html.DropDownListFor(m => m.MDoctorAd.Status, new SelectList(new List<SelectListItem>
                {
                    new SelectListItem { Value = "Active", Text = "Active" },
                    new SelectListItem { Value = "Inactive", Text = "Inactive" },
                }, "Value", "Text"), "Select Status", new { @required = "required", @class = "form-control" })
            </div>
        </div>

        <div style="display: flex; justify-content: center;">
            <input type="submit" class="btn-submit" value="Submit" style="border-color: #e74715">
        </div>
    </div>
}



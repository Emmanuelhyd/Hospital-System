        border-radius: 4px;
        transition: background-color 0.3s;
    }

        input[type="button"]:hover, input[type="submit"]:hover {
            background-color: #3051bd;
        }

    input[type="search"] {
        padding: 10px;
        width: 200px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    table {
        width: 100%;
        border-collapse: collapse;

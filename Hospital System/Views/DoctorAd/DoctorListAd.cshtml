

@model Hospital_System.Dash.DashboardDetails


@{
    ViewBag.Title = "DoctorListAd";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script>
    function CreateNew() {

        window.location.href = 'AddDoctorAd';
    }
</script>


@using (Html.BeginForm())
{
    <div style="margin-left: 64px; position: absolute; margin-top: 77px;">
        <div>
            <div>
                <input type="button" value="CreateNew " onclick="CreateNew()">
                <input type="search" id="doc" name="doc">
                <input type="submit" value="Search">
            </div>

            <table border="1">
                <tr>
                    <th>DoctorId</th>
                    <th>FullName</th>
                    @*<th>Firstname</th>
                    <th>LastName</th>*@
                    <th>Email</th>
                    <th>Department</th>
                    <th>Designation</th>
                    <th>PhoneNo</th>
                    <th>ContactNo</th>
                    <th>Education</th>
                    <th>Gender</th>

                    <th>Status</th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model.mDoctorAds)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.DoctorId)</td>
                        <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                        @*<td>@Html.DisplayFor(modelItem => item.Firstname)</td>
                        <td>@Html.DisplayFor(modelItem => item.LastName)</td>*@
                        <td>@Html.DisplayFor(modelItem => item.Email)</td>
                        <td>@Html.DisplayFor(modelItem => item.Department)</td>
                        <td>@Html.DisplayFor(modelItem => item.Designation)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.ContactNo)</td>
                        <td>@Html.DisplayFor(modelItem => item.Education)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td style="display: flex; gap: 10px;">
                            <a href="@Url.Action("DAEdit", new { DoctorId = item.DoctorId })">
                                <i class="fas fa-edit" style="color:blue;"></i>
                            </a>

                            

                            <a href="javascript:void(0);" onclick="confirmDelete('@Url.Action("DADelete", new {DoctorId = item.DoctorId })')">
                                <i class="fas fa-trash-alt"></i>
                            </a>

                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}


@model Hospital_System.Models.Feedbk


@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Feedback</title>
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 20px;
        }

        div {
            max-width: 600px;
            margin: auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        h3 {
            text-align: center;
            margin-bottom: 20px;
        }

        .underline-input {
            padding: 10px;
            width: 80%;
            outline: none;
            font-size: 16px;
            margin-bottom: 15px;
            border: 2px solid #ccc;
            border-radius: 4px;
            transition: border-color 0.3s;
        }

            .underline-input:focus {
                border-color: #28a745;
            }

        textarea {
            width: 100%;
            height: 100px;
            border: 2px solid #ccc;
            padding: 10px;
            resize: none;
            outline: none;
            font-size: 16px;
            border-radius: 4px;
            margin-bottom: 15px;
        }

            textarea:focus {
                border-color: #28a745;
            }

        .rating {
            display: flex;
            justify-content: space-around;
            margin-bottom: 20px;
        }

        .star {
            font-size: 30px;
            color: #ccc;
            cursor: pointer;
            transition: color 0.3s;
        }

            .star:hover,
            .star.selected {
                color: #f39c12; /* Gold color for selected stars */
            }

        button {
            background-color: #ef7d7d;
            color: white;
            border: none;
            padding: 10px;
            border-radius: 5px;
            cursor: pointer;
            font-size: 16px;
            width: 100%;
            transition: background-color 0.3s;
        }

            button:hover {
                background-color: #218838;
            }
    </style>
    <script>
        function setRating(rating, group) {
            const stars = document.querySelectorAll(`.${group} .star`);
            stars.forEach((star, index) => {
                star.classList.toggle('selected', index < rating);
            });
            document.getElementById(group).value = rating; // Store the rating value
        }
    </script>
</head>
<body>
    <div>
        <h3>Give us your valuable feedback!</h3>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @TempData["Message"]

            <h4>Personal Information</h4>
            <div class="input-group">
                @Html.TextBoxFor(m => m.Name, new { @class = "underline-input", placeholder = "Name" })
                @Html.TextBoxFor(m => m.Age, new { @class = "underline-input", placeholder = "Age" })
            </div>

            <div class="input-group">
                @Html.TextBoxFor(m => m.Email, new { @class = "underline-input", placeholder = "Email" })
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "underline-input", placeholder = "Phone Number" })
            </div>

            <h2>How would you rate us?</h2>

            <div>
                <div>Our Waiting Room (is it clean & Comfortable)?</div>
                <input type="hidden" id="waitingroom" name="Waitingroom" />
                <div class="rating waitingroom">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <span class="star" onclick="setRating(@i, 'waitingroom')">&#9733;</span>
                    }
                </div>
            </div>

            <div>
                <div>Our Administration Staff (did they help you promptly and answer your questions)?</div>
                <input type="hidden" id="staff" name="Staff" />
                <div class="rating staff">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <span class="star" onclick="setRating(@i, 'staff')">&#9733;</span>
                    }
                </div>
            </div>

            <div>
                <div>Your Nurse (were they pleasant & Professional)?</div>
                <input type="hidden" id="nurse" name="Nurse" />
                <div class="rating nurse">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <span class="star" onclick="setRating(@i, 'nurse')">&#9733;</span>
                    }
                </div>
            </div>

            <div>
                <div>Your Doctor (did they address your issue and answer your questions clearly)?</div>
                <input type="hidden" id="doctor" name="Doctor" />
                <div class="rating doctor">
                    @for (int i = 1; i <= 5; i++)
                    {
                        <span class="star" onclick="setRating(@i, 'doctor')">&#9733;</span>
                    }
                </div>
            </div>

            <h3>Your Overall Experience</h3>
            <label>Do you have any additional feedback?</label>
            @Html.TextAreaFor(m => m.OverallExperience, new { @class = "underline-input" })

            <button type="submit">Send</button>
        }
    </div>
</body>
</html>

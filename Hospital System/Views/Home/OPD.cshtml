<script>

    function saveData(e) {
        e.preventDefault();


        const patientData = {
            patientName: document.getElementById('patientName').value,
            address: document.getElementById('address').value,
            gender: document.getElementById('gender').value,
            diagnosis: document.getElementById('diagnosis').value,
            dob: document.getElementById('dob').value,
            treatment: document.getElementById('treatment').value,
            surgery: document.getElementById('surgery').value,
            additionalInfo: document.getElementById('additionalInfo').value,
            guardianMobile: document.getElementById('guardianMobile').value,
            physicianEmail: document.getElementById('physicianEmail').value,
            physicianAddress: document.getElementById('physicianAddress').value,
            physicianMobile: document.getElementById('physicianMobile').value,
            referrer: document.getElementById('referrer').value,
            yourEmail: document.getElementById('yourEmail').value,
            captcha: document.getElementById('captcha').value,
        };


        localStorage.setItem('patientData', JSON.stringify(patientData));


        displayStoredData();
    }


    function displayStoredData() {
        const storedData = JSON.parse(localStorage.getItem('patientData'));


        if (storedData) {

            const output = `
            Patient Name: ${storedData.patientName}
            Address: ${storedData.address}
            Gender: ${storedData.gender}
            Diagnosis: ${storedData.diagnosis}
            Date of Birth: ${storedData.dob}
            Treatment: ${storedData.treatment}
            Surgery: ${storedData.surgery}
            Additional Info: ${storedData.additionalInfo}
            Guardian Mobile: ${storedData.guardianMobile}
            Physician Email: ${storedData.physicianEmail}
            Physician Address: ${storedData.physicianAddress}
            Physician Mobile: ${storedData.physicianMobile}
            Referrer: ${storedData.referrer}
            My Email: ${storedData.yourEmail}
            Captcha: ${storedData.captcha}
        `;

            document.getElementById('output').textContent = output;
        } else {
            document.getElementById('output').textContent = 'No data stored.';
        }
    }


    document.getElementById('referralForm').addEventListener('submit', saveData);


    window.onload = displayStoredData;

</script>


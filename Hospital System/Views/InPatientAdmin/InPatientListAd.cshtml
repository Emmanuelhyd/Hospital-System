@model IEnumerable<Hospital_System.Models.MInPatient>


@{
    ViewBag.Title = "InPatientListAd";
    Layout = null;

}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Saira:wght@500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/All css/css/bootstrap.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/All css/css/style.css" rel="stylesheet">
    <link href="~/All css/css/style-mob.css" rel="stylesheet">

    <link href="~/All css/animate/animate.css" rel="stylesheet" />
    <link href="~/All css/animate/animate.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />


    <!-- External styles for SweetAlert -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
</head>

@using (Html.BeginForm())
{
    <div class="sb2-2-3" style="position: absolute; width: 100%; margin-top: 20px">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-title">
                        <li class="page-back" >
                            <a href="/ReceptionAdmin/ReceptionFrontPage"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
                        </li>

                        <h4 style="margin-left:300px;margin-top:-5px;font-size:20px;">InPatient Summary</h4>

                    </div>
                    <div class="tab-inn">
                        <div class="table-responsive table-desi">
                            <table class="table table-hover">
                                <tr>
                                    <th>Patient Id</th>
                                    <th>Patient Name</th>
                                    <th>Admission Date</th>
                                    <th>Discharge Date</th>
                                    <th>Patient Type</th>
                                    <th>Treatment Duration</th>
                                    <th>Appointment Date</th>
                                    <th>Status</th>
                                    @*<th>Action</th>*@
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.AdmissionDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DischargeDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PatientType)</td>
                                        <td>@Html.DisplayFor(modelItem => item.TreatmentDuration)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                        @*<td class="icon-container">
                                <a href="@Url.Action("InPatientEdit", new { PatientId = item.PatientId })">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a href="@Url.Action("InPatientDelete", new { PatientId = item.PatientId })">
                                    <i class="fas fa-trash-alt"></i>
                                </a>
                            </td>*@
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}


<style>
    .my-btn {
        color: #ffffff;
        background: #57666d;
        padding: 10px;
        line-height: 10px;
        font-weight: 1000;
    }

    .inn-titles {
        padding: 1px 25px;
        background: #002147;
        height:60px;
    }
</style>
@model Hospital_System.Models.HospPatient

@{
    ViewBag.Title = "GetHospPatient";
    Layout = null;
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 20px;
    }

    h2 {
        color: #333;
        text-align: center;
        margin-bottom: 30px;
    }

    .patient-details {
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        padding: 20px;
        max-width: 600px;
        margin: 0 auto;
    }

        .patient-details strong {
            color: #555;
        }

        .patient-details br {
            margin: 10px 0;
        }

    /* Back button styling */
    .back-button {
        display: inline-block;
        padding: 10px 15px;
        background-color: #007BFF;
        color: white;
        font-size: 14px;
        font-weight: bold;
        border-radius: 5px;
        text-decoration: none;
        margin-bottom: 20px;
        transition: background-color 0.3s ease;
        margin-left: 20px; /* Adds some space from the left */
    }

        .back-button:hover {
            background-color: #0056b3;
        }

        .back-button:active {
            background-color: #003f7f;
        }
</style>

<!-- Back Button -->
<a href="javascript:history.back()" class="back-button">Back</a>

<h2>Patient Details</h2>

<div class="patient-details">
    <strong>Patient Name:</strong> @Model.PatientName <br />
    <strong>Admission Date:</strong> @Model.AdmissionDate <br />
    <strong>Discharge Date:</strong> @Model.DischargeDate <br />
    <strong>Problem:</strong> @Model.Problem <br />
    <strong>Status:</strong> @Model.Status <br />
</div>

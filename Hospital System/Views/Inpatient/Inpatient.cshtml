@model IEnumerable<Hospital_System.Models.HospPatient>

@{
    ViewBag.Title = "Inpatient List";
    Layout = null;
}

<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Saira:wght@500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/All css/css/bootstrap.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/All css/css/style.css" rel="stylesheet">
    <link href="~/All css/css/style-mob.css" rel="stylesheet">

    <link href="~/All css/animate/animate.css" rel="stylesheet" />
    <link href="~/All css/animate/animate.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
</head>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />


<div class="row">
    <div class="col-md-12" ">
        <div class="box-inn-sp">
            <div class="inn-title">
                <li class="page-back">
                    <a href="/Reception/Reception"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
                </li>
                <h4>Inpatient List</h4>

            </div>

            <div class="tab-inn">
                <div class="table-responsive table-desi">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Patient Id</th>
                                <th scope="col">@Html.DisplayNameFor(m => m.First().PatientName)</th>
                                <th scope="col">@Html.DisplayNameFor(m => m.First().AdmissionDate)</th>
                                <th scope="col">@Html.DisplayNameFor(m => m.First().DischargeDate)</th>
                                <th scope="col">@Html.DisplayNameFor(m => m.First().TypeName)</th>
                                <th scope="col">@Html.DisplayNameFor(m => m.First().TreatmentDuration)</th>
                                <th scope="col">Appointment Date</th>
                                <th scope="col">@Html.DisplayNameFor(m => m.First().Status)</th>
                                <th scope="col">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (!Model.Any())
                            {
                                <tr>
                                    <td colspan="9" class="empty-state">No patients found.</td>
                                </tr>
                            }
                            else
                            {
                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(m => item.Id)</td>
                                        <td>@Html.DisplayFor(m => item.PatientName)</td>
                                        <td>@Html.DisplayFor(m => item.AdmissionDate)</td>
                                        <td>@Html.DisplayFor(m => item.DischargeDate)</td>
                                        <td>@Html.DisplayFor(m => item.TypeName)</td>
                                        <td>@Html.DisplayFor(m => item.TreatmentDuration)</td>
                                        <td>@Html.DisplayFor(m => item.Date)</td>
                                        <td>@Html.DisplayFor(m => item.Status)</td>
                                        <td class="action-cell">
                                            <a href="@Url.Action("GetHospPatient", "Inpatient", new { Id = item.Id })" class="ad-st-view">View</a>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</div>


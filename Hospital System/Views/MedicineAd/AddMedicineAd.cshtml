@model Hospital_System.Models.MMedicineAd

@{
    ViewBag.Title = "AddMedicineAd";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("AddMedicineAd", "MedicineAd"))
{
    <div class="form-container">
        <div class="form-group" style="margin-left:100px;margin-top:10px;">
            <div class="form-item">
                <div>@Html.LabelFor(m => m.PatientId)</div>
                <div>
                    @Html.TextBoxFor(m => m.PatientId, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PatientId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-item">
                <div>@Html.LabelFor(m => m.PatientName)</div>
                <div>
                    @Html.TextBoxFor(m => m.PatientName, new { @required = "required", @placeholder = "Patient Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.PatientName, "", new { @class = "text-danger" })
                </div>
            </div>


            <div >
                <div class="form-item">
                    <div>@Html.LabelFor(m => m.DoctorName)</div>
                    <div>
                        @Html.TextBoxFor(m => m.DoctorName, new { @required = "required", @placeholder = "Doctor Name", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.DoctorName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-item">
                    <div>@Html.LabelFor(m => m.Problem)</div>
                    <div>
                        @Html.TextBoxFor(m => m.Problem, new { @required = "required", @placeholder = "Problem", @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Problem, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>

            <div class="form-item">
                <div>@Html.LabelFor(m => m.Description)</div>
                <div>
                    @Html.TextBoxFor(m => m.Description, new { @required = "required", @placeholder = "Description", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="form-item">
                    <div>@Html.LabelFor(m => m.MedicineName)</div>
                    <div>
                        @Html.TextBoxFor(m => m.MedicineName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.MedicineName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-item">
                    <div>@Html.LabelFor(m => m.Morning)</div>
                    <div>
                        <select id="Morning" name="Morning" required class="form-control">
                            <option value=""></option>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="form-item">
                    <div>@Html.LabelFor(m => m.Afternoon)</div>
                    <div>
                        <select id="Afternoon" name="Afternoon" required class="form-control">
                            <option value=""></option>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </select>
                    </div>
                </div>
                <div class="form-item">
                    <div>@Html.LabelFor(m => m.Night)</div>
                    <div>
                        <select id="Night" name="Night" required class="form-control">
                            <option value=""></option>
                            <option value="Yes">Yes</option>
                            <option value="No">No</option>
                        </select>
                        
                    </div>
                </div>
            </div>

            <div>
                <input type="submit" value="Submit" class="submit-button">
            </div>

        </div>
    </div>
}

<style>
    .form-container {
        max-width: 600px; /* Adjust to fit your design */
        margin: 0 auto; /* Center the form */
        padding: 20px;
        border: 1px solid #ccc; /* Light gray border */

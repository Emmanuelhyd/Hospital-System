@model IEnumerable<Hospital_System.Models.Nurse>

@{
    ViewBag.Title = "GetNurses";
    Layout = null;
}

<!DOCTYPE html>

<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f9f9f9;
        }

        h1 {
            text-align: center;
            color: #333;
            margin-bottom: 20px;
            font-size: 28px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: white;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            border-radius: 5px;
            overflow: hidden;
        }

        th, td {
            padding: 12px;
            border: 1px solid #dddddd;
            text-align: left;
        }

        thead {
            background-color: #3498db; /* Static blue header color */
            color: white;
        }

        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        .back-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #007BFF;
            color: white;
            text-decoration: none;
            border-radius: 5px;
            margin-bottom: 20px;
            font-size: 16px;
        }

            .back-button:hover {
                background-color: #0056b3;
            }
    </style>
</head>

<body>
    <!-- Back Button -->
    <div>
        <a href="javascript:history.back()" class="back-button">Back</a>
    </div>

    <h1>List of Nurses</h1>

    <div>
        <table>
            <thead>
                <tr>
                    <th>NurseID</th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Email</th>
                    <th>ShiftType</th>
                    <th>Employment Status</th>
                    <th>Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var nurse in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => nurse.NurseId)</td>
                        <td>@Html.DisplayFor(m => nurse.Name)</td>
                        <td>@Html.DisplayFor(m => nurse.Contact)</td>
                        <td>@Html.DisplayFor(m => nurse.Email)</td>
                        <td>@Html.DisplayFor(m => nurse.ShiftType)</td>
                        <td>@Html.DisplayFor(m => nurse.EmployeeStatus)</td>
                        <td><a href="@Url.Action("NurseDetails", "Nurse", new { NurseId = nurse.NurseId })">View</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>

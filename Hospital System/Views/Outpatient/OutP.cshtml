@model IEnumerable<Hospital_System.Models.HospPatient>

@{
    ViewBag.Title = "OutP";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Outpatients</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f4;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse; /* Ensures borders collapse together */
            margin: 20px 0;
            background-color: #fff;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #ddd; /* Adds border to columns and rows */
        }

        th {
            background-color: #007BFF;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        a {
            color: #007BFF;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }

        /* Back Button Styling */
        .back-button {
            display: inline-block;
            padding: 10px 15px;
            background-color: #007bff;
            color: white;
            font-size: 14px;
            font-weight: bold;
            border-radius: 5px;
            text-decoration: none;
            margin-bottom: 20px;
            transition: background-color 0.3s ease;
        }

            .back-button:hover {
                background-color: #0056b3; /* Darker blue on hover */
            }

            .back-button:active {
                background-color: #003f7f; /* Even darker blue when clicked */
            }
    </style>
</head>
<body>

    <!-- Back Button -->
    <a href="javascript:history.back()" class="back-button">Back</a>

    <h1>Outpatient Records</h1>
    <table>
        <thead>
            <tr>
                <th>Patient Id</th>
                <th>@Html.DisplayNameFor(m => m.First().PatientName)</th>
                <th>@Html.DisplayNameFor(m => m.First().Problem)</th>
                <th>@Html.DisplayNameFor(m => m.First().Description)</th>
                <th>@Html.DisplayNameFor(m => m.First().Gender)</th>
                <th>@Html.DisplayNameFor(m => m.First().Address)</th>
                <th>@Html.DisplayNameFor(m => m.First().PhoneNumber)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Id)</td>
                    <td>@Html.DisplayFor(m => item.PatientName)</td>
                    <td>@Html.DisplayFor(m => item.Problem)</td>
                    <td>@Html.DisplayFor(m => item.Description)</td>
                    <td>@Html.DisplayFor(m => item.Gender)</td>
                    <td>@Html.DisplayFor(m => item.Address)</td>
                    <td>@Html.DisplayFor(m => item.PhoneNumber)</td>
                    <td><a href="@Url.Action("OPID", "Outpatient", new { Id = item.Id })">View</a></td>
                </tr>
            }
        </tbody>
    </table>

</body>
</html>

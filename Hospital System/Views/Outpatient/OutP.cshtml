@model IEnumerable<Hospital_System.Models.HospPatient>

@{
    ViewBag.Title = "OutP";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Outpatients</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
            background-color: #f4f4f4;
        }

        h1 {
            text-align: center;
            color: #333;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            background-color: #fff;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007BFF;
            color: white;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        a {
            color: #007BFF;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <h1>Outpatient Records</h1>
    <table>
        <thead>
            <tr>
                <th>Patient Id</th>
                <th>@Html.DisplayNameFor(m => m.First().PatientName)</th>
                <th>@Html.DisplayNameFor(m => m.First().Problem)</th>
                <th>@Html.DisplayNameFor(m => m.First().Description)</th>
                <th>@Html.DisplayNameFor(m => m.First().Gender)</th>
                <th>@Html.DisplayNameFor(m => m.First().Address)</th>
                <th>@Html.DisplayNameFor(m => m.First().PhoneNumber)</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m => item.Id)</td>
                    <td>@Html.DisplayFor(m => item.PatientName)</td>
                    <td>@Html.DisplayFor(m => item.Problem)</td>
                    <td>@Html.DisplayFor(m => item.Description)</td>
                    <td>@Html.DisplayFor(m => item.Gender)</td>
                    <td>@Html.DisplayFor(m => item.Address)</td>
                    <td>@Html.DisplayFor(m => item.PhoneNumber)</td>
                    <td><a href="@Url.Action("OPID", "Outpatient", new { Id = item.Id })">View</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>

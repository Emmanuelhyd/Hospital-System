@model IEnumerable<Hospital_System.Models.HospPatient>

@{
    ViewBag.Title = "PatientsList";
    Layout = "~/Views/Shared/_LayoutPatRec.cshtml";
}



<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Saira:wght@500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/All css/css/bootstrap.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/All css/css/style.css" rel="stylesheet">
    <link href="~/All css/css/style-mob.css" rel="stylesheet">

    <link href="~/All css/animate/animate.css" rel="stylesheet" />
    <link href="~/All css/animate/animate.min.css" rel="stylesheet" />

    <!-- External styles for SweetAlert -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css">
</head>



<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />




@using (Html.BeginForm())
{
    <div class="sb2-2" style="margin-top: 76px; height: 125vh;">
        <div class="sb2-2-2">
            <ul>
                <li>
                    <a href="/Reception/Reception"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
                </li>
                <li class="active-bre">
                    <a href="#"> PatientsList</a>
                </li>
                <li class="page-back">
                    <a href="/Reception/Reception"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
                </li>
            </ul>
        </div>


        <div class="row">
            <div class="col-md-12" style="margin-top: 50px; width: 100%; margin-left: -1px; ">
                <div class="box-inn-sp">
                    <div class="inn-title">
                        <h4>Patients List</h4>
                        @*<li class="page-back">
                                <a href="/Reception/Reception" style="position: absolute; margin-left: -60px; margin-top: -27px;"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
                            </li>*@
                        <input type="button" value="Add New" style="position: absolute; margin-left: 131px; margin-top: -30px; width: 7%; height: 33px; color: white; background-color: #58b392; border-radius: 5px; border-color: #58b392; " onclick="window.location.href='@Url.Action("AddPatient", "Outpatient")'">


                    </div>

                    <div class="tab-inn">
                        <div class="table-responsive table-desi">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Patient Id</th>
                                        <th>Patient Name</th>
                                        @*<th>Admission Date</th>
                                            <th>Discharge Date</th>*@
                                        <th>Patient Type</th>
                                        <th>Treatment Duration</th>
                                        <th>Appointment Date</th>
                                        <th>Status</th>
                                        <th>Problem</th>
                                        <th>Description</th>
                                        <th>Gender</th>
                                        <th>Address</th>
                                        <th>Phone Number</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                            <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                                            @*<td>@Html.DisplayFor(modelItem => item.AdmissionDate)</td>
                                                <td>@Html.DisplayFor(modelItem => item.DischargeDate)</td>*@
                                            <td>@Html.DisplayFor(modelItem => item.PatientType)</td>
                                            <td>@Html.DisplayFor(modelItem => item.TreatmentDuration)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Date)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Problem)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Address)</td>
                                            <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                                            <td>
                                                <a href="@Url.Action("PatientEdit", new { Id = item.Id })">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}



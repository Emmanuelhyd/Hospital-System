@model IEnumerable<Hospital_System.Models.HospPatient>

@{
    ViewBag.Title = "PatientsList";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <style>
        /* Base styles */
        body {
            font-family: 'Arial', sans-serif;
            background-color: #f4f7fa;
            margin: 0;
            padding: 0;
        }

        /* Table container styling */
        .table-container {
            max-width: 100%;
            margin: 20px;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        /* Back button styling */
        .back-button {
            display: inline-block;
            padding: 10px 15px;
            background-color: #007bff;
            color: white;
            font-size: 14px;
            font-weight: bold;
            border-radius: 5px;
            text-decoration: none;
            margin-bottom: 20px;
            transition: background-color 0.3s ease;
        }

        .back-button:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }

        .back-button:active {
            background-color: #003f7f; /* Even darker blue when clicked */
        }

        /* Table styling */
        table {
            width: 100%;
            border-collapse: collapse; /* Ensures borders are collapsed */
            margin-top: 20px;
        }

        /* Table headers */
        th {
            background-color: #007bff;
            color: white;
            padding: 14px;
            text-align: left;
            font-weight: bold;
            border: 1px solid #ddd; /* Add border to table header */
        }

        /* Table rows */
        td {
            padding: 14px;
            text-align: left;
            border: 1px solid #ddd; /* Add border to table data cells */
        }

        /* Alternate row colors */
        tr:nth-child(even) {
            background-color: #f9f9f9;
        }

        tr:hover {
            background-color: #f1f1f1;
        }

        /* Table cell font styling */
        td, th {
            font-size: 1rem;
            color: #333;
        }

        /* Prevent word overflow in cells */
        td, th {
            word-wrap: break-word;
        }

        /* Ensure the table fits without horizontal scroll and looks good on mobile */
        .table-container {
            width: 100%;
            margin-left: -19px;
        }

        table {
            table-layout: auto; /* Allow column width to adjust automatically */
            width: 100%;
        }

        th, td {
            word-wrap: break-word; /* Ensures long text doesn't overflow */
        }

        /* Responsive Design */
        media (max-width: 768px) {
            table, th, td {
                font-size: 0.9rem;
            }

            /* For smaller screens, reduce padding */
            .table-container {
                padding: 10px;
            }

            th, td {
                padding: 8px;
            }
        }

        media (max-width: 480px) {
            th, td {
                font-size: 0.8rem;
                padding: 6px;
            }
        }
    </style>
</head>
<body>

    <div class="table-container">
        <!-- Back Button -->
        <a href="javascript:history.back()" class="back-button">Back</a>

        <h1 style="text-align:center;">Patient List</h1>

        <table>
            <thead>
                <tr>
                    <th>Patient Id</th>
                    <th>Patient Name</th>
                    <th>Admission Date</th>
                    <th>Discharge Date</th>
                    <th>Patient Type</th>
                    <th>Treatment Duration</th>
                    <th>Appointment Date</th>
                    <th>Status</th>
                    <th>Problem</th>
                    <th>Description</th>
                    <th>Gender</th>
                    <th>Address</th>
                    <th>Phone Number</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                        <td>@Html.DisplayFor(modelItem => item.AdmissionDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.DischargeDate)</td>
                        <td>@Html.DisplayFor(modelItem => item.PatientType)</td>
                        <td>@Html.DisplayFor(modelItem => item.TreatmentDuration)</td>
                        <td>@Html.DisplayFor(modelItem => item.Date)</td>
                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                        <td>@Html.DisplayFor(modelItem => item.Problem)</td>
                        <td>@Html.DisplayFor(modelItem => item.Description)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</body>
</html>

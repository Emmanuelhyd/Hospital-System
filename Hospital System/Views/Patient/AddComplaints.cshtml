@model IEnumerable<Hospital_System.Models.Complain>
@{
    ViewBag.Title = "AddComplaints";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
  
}
}

@using (Html.BeginForm())
{
    <div style="position: absolute; margin-left: 200px; width: 984px; margin-top: -140px;height:100vh;">
        <div>
            <h3> List Of Complaints</h3>
            <a href="Complaint"> Createnew </a>
            <div class=" container">
                <div class="row" style="margin-top: 45px; margin-left: 50px;">
                    <label>
                        Show
                        <select id="dropdownlist" style="width: 95px; height: 35px; ">
                            <option value=""></option>
                            <option value="10"> 10</option>
                            <option value="25">25</option>
                            <option value="50">50</option>
                            <option value="100"> 100</option>
                        </select>
                        Entries
                    </label>

                    <input type="submit" value="search">

                    <input type="search" id="searchvalue" name="searchvalue" style="width: 140px; height: 40px;" />


                </div>
                <table class="complaints-table">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Complaint)</th>
                            <th>@Html.DisplayNameFor(model => model.Reply)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var c in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => c.Complaint)</td>
                                <td>@Html.DisplayFor(modelItem => c.Reply)</td>
                                <td>

                                    @Html.ActionLink("Edit", "EditComplains", new { id = c.Complaint }) | |  <a href="DeleteComplains"> Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>


            </div>
        </div>
    </div>
}
<style>

    .complaints-table {
        width: 100%;
        border-collapse: collapse; /* Remove space between borders */
        margin: 20px 0; /* Margin around the table */
        font-family: Arial, sans-serif; /* Font for the table */
        background-color: #ffffff; /* White background */
        box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Shadow for depth */
        border-radius: 8px; /* Rounded corners */
    }

        /* Table headers styling */
        .complaints-table thead {
            background-color: #007bff; /* Blue background for headers */
            color: #ffffff; /* White text color */
        }

        .complaints-table th {
            padding: 12px 15px; /* Padding inside header cells */
            text-align: left; /* Align text to the left */
        }

        /* Table rows styling */
        .complaints-table tbody tr:nth-child(even) {
            background-color: #f9f9f9; /* Light grey background for even rows */
        }

        .complaints-table tbody tr:nth-child(odd) {
            background-color: #ffffff; /* White background for odd rows */
        }

        .complaints-table td {
            padding: 12px 15px; /* Padding inside data cells */
            border-bottom: 1px solid #dee2e6; /* Light border between rows */
        }

        /* Style for the last row's border */
        .complaints-table tbody tr:last-child td {
            border-bottom: 0; /* Remove border for the last row */
        }
</style>

                    


@model IEnumerable<Hospital_System.Models.Ambulance>

@{
    ViewBag.Title = "Ambulances";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>@ViewBag.Title</title>

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa; /* Light background for contrast */
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px; /* Set a max width for the container */
            margin: 20px auto;
            padding: 20px;
            /*     background-color: white;  White background for content
            border-radius: 8px;  Rounded corners
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);  Subtle shadow */
            position: absolute;
            margin-left: 329px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .table {
            width: 100%;
            border-collapse: collapse; /* Remove gaps between table cells */
        }

        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #dee2e6; /* Light grey border */
        }

        th {
            background-color: #007bff; /* Blue background for the header */
            color: white; /* White text for the header */
            font-weight: bold; /* Bold text for header */
        }

        tr:nth-child(even) {
            background-color: #f2f2f2; /* Light grey for even rows */
        }

        tr:hover {
            background-color: #e9ecef; /* Light highlight on hover */
        }

        a {
            display: inline-block;
            margin-top: 20px;
            padding: 10px 15px;
            background-color: #007bff; /* Blue background for button */
            color: white; /* White text for button */
            text-decoration: none; /* Remove underline */
            border-radius: 4px; /* Rounded corners */
            transition: background-color 0.3s; /* Smooth transition */
        }

            a:hover {
                background-color: #0056b3; /* Darker blue on hover */
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2>List of Ambulances</h2>
        <div class="table">
            <table>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().Id)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Name)</th>
                        <th>@Html.DisplayNameFor(model => model.First().AmbulanceId)</th>
                        <th>@Html.DisplayNameFor(model => model.First().AmbulanceStatus)</th>
                        <th>@Html.DisplayNameFor(model => model.First().AmbulanceDriver)</th>
                        <th>@Html.DisplayNameFor(model => model.First().AmbulanceDriverId)</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var ambulance in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => ambulance.Id)</td>
                            <td>@Html.DisplayFor(modelItem => ambulance.Name)</td>
                            <td>@Html.DisplayFor(modelItem => ambulance.AmbulanceId)</td>
                            <td>@Html.DisplayFor(modelItem => ambulance.AmbulanceStatus)</td>
                            <td>@Html.DisplayFor(modelItem => ambulance.AmbulanceDriver)</td>
                            <td>@Html.DisplayFor(modelItem => ambulance.AmbulanceDriverId)</td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.ActionLink("Back", "Dashboard", "Patient")
        </div>
    </div>
</body>
</html>


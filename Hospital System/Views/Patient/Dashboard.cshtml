@model Hospital_System.Viewmodel.Allview
@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_LayoutPatientPage1.cshtml";
}

<title>Dashboard</title>

<style>
    h1 {
        text-align: center;
        margin-top: 20px;
        color: #343a40;
    }

    .link-container {
        position: absolute;
        background-color: #ffffff;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        text-align: center;
        padding: 20px;
        text-decoration: none;
        color: inherit;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 195px;
        height: 165px;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .link-container:hover {
            background-color: #6baef6;
            box-shadow: 0 6px 12px rgba(0,0,0,0.15);
        }

    .icon {
        font-size: 36px;
        margin-bottom: 15px;
    }

    #tab1 .icon {
        color: #007bff;
    }

    #tab2 .icon {
        color: #28a745;
    }

    #tab3 .icon {
        color: #dc3545;
    }

    #tab4 .icon {
        color: #ffc107;
    }

    #tab5 .icon {
        color: #17a2b8;
    }

    #tab6 .icon {
        color: #6c757d;
    }

    #tab7 .icon {
        color: #e83e8c;
    }

    #tab8 .icon {
        color: #fd7e14;
    }

    .count {
        font-size: 28px;
        color: #343a40;
        margin: 10px 0;
        color: whitesmoke
    }

    .tag {
        font-weight: 900;
        font-size: larger;
        color: whitesmoke;
    }

    /*.tag:hover {
        background-color: #0056b3;
    }*/

    #tab1 {
        margin-top: 20px;
    }

    #tab2 {
        margin-left: -21px;
        margin-top: 20px;
        width: 19%;
    }

    #tab3 {
        margin-left: 541px;
        margin-top: 20px;
    }

    #tab4 {
        margin-left: 729px;
        margin-top: 18px;
        width: 18%;
    }

    #tab5 {
        margin-top: 240px;
    }

    #tab6 {
        margin-left: 268px;
        margin-top: 240px;
    }

    #tab7 {
        margin-left: 237px;
        margin-top: 20px;
        width: 18%;
    }

    #tab8 {
        margin-left: 483px;
        margin-top: 20px;
        width: 18%;
    }

    .link-container a {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        width: 226px;
        height: 48vh;
        text-decoration: none;
        color: inherit;
    }

    /* Set fixed size for the pie chart */
    #pieChartContainer {
        width: 50%; /* Fixed width, adjust as needed */
        height: 400px; /* Fixed height */
        margin: 20px auto;
        text-align: center;
    }

    canvas {
        width: 100% !important; /* Make canvas responsive */
        height: 100% !important; /* Ensure canvas fits container */
    }
</style>

@TempData["UserName"]

<!-- Navigation and Dashboard Links -->
<div class="sb2-2" style="margin-top: 76px; height: 120vh;">
    <div class="sb2-2-2">
        <ul>
            <li><a href="/Patient/Dashboard"><i class="fa fa-home" aria-hidden="true"></i> Home</a></li>
            <li class="active-bre"><a href="#"> Dashboard</a></li>
            <li class="page-back"><a href="/Patient/Dashboard"><i class="fa fa-backward" aria-hidden="true"></i> Back</a></li>
        </ul>
    </div>

    <div class="sb2-2-1" style="height: 35%; background-color: #e3e8ea;">

        <!-- Dynamic Dashboard Link Containers -->
        <div id="tab2" class="link-container" style=" background-image: url('../../images/portrait-male-doctors-nurse-using-digital-tablet-corridor_107420-71369.png'); background-size: cover; background-position: center;">

            <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.4); z-index: 0;"></div>
            <a href="Doc" class="link" data-chart="Doctors" style="position: relative; z-index: 1;">

                <p class="count">@Model.DoctorCount</p>
                <span class="tag">Doctors</span>
            </a>
        </div>
        <div id="tab4" class="link-container" style=" background-image: url('../../images/ambulance-truck.png'); background-size: cover; background-position: center;">


            <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.4); z-index: 0;"></div>

            <!-- Link with text -->
            <a href="Ambulanceses" class="link" data-chart="Ambulances" style="position: relative; z-index: 1;">
                <p class="count">@Model.AmbulanceCount</p>
                <span class="tag">
                    Ambulances
                </span>
            </a>
        </div>

        <div id="tab7" class="link-container" style="background-image: url('../../Images/medicine.png'); background-size: cover; background-position: center; ">
            <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.4); z-index: 0;"></div>
            <a href="medicals" class="link" data-chart="Medicines" style="position: relative; z-index: 1;">

                <p class="count">@Model.MedicineCount</p>
                <span class="tag">Medicines</span>

            </a>
        </div>
        <div id="tab8" class="link-container" style="background-image: url('../../Images/driver.png'); background-size: cover; background-position: center; ">
            <div style="position: absolute; top: 0; left: 0; right: 0; bottom: 0; background: rgba(0, 0, 0, 0.4); z-index: 0;"></div>
            <a href="Drive" class="link" data-chart="Drivers" style="position: relative; z-index: 1;">

                <p class="count">@Model.DriverCount</p>
                <span class="tag">Drivers</span>
            </a>
        </div>

    </div>
</div>

@using (Html.BeginForm())
{

<div class="row" style="margin-left: 272px;">
    <div class="col-md-12" style="margin-top:-420px; width:96%">
        <div class="box-inn-sp" style="margin-left: 25px; ">
            <div class="inn-title">
                <h4> Doctor List </h4>

            </div>

            <div class="tab-inn">
                <div class="table-responsive table-desi">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>Full Name</th>
                                <th>Email</th>
                                <th>Department</th>
                                <th>Designation</th>
                                <th>Status</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Doctors)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Department)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Designation)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                    
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

}





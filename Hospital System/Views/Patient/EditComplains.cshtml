@model Hospital_System.Models.Complain
@{
    ViewBag.Title = "EditComplains";
   
}

@using (Html.BeginForm())
{
   <div>
       <form asp-action="Create" method="post" class="complaint-form">
           <div class="form-group" style=" margin-left: 303px; position: absolute; margin-top: 45px;">
               @Html.LabelFor(model => model.Complaint, new { @class = "form-label" })
               @Html.TextAreaFor(model => model.Complaint, new { @class = "form-control", rows = 3, placeholder = "Enter your complaint here..." })
               @Html.ValidationMessageFor(model => model.Complaint, "", new { @class = "validation-message" })
           </div>

           <button type="submit" class="btn btn-submit">Submit</button>
       </form>
   </div>
}

<style>
    /* Style for the form container */
    .complaint-form {
        max-width: 600px; /* Restrict form width for readability */
        margin: 0 auto; /* Center the form horizontally */
        padding: 20px;
        background-color: #ffffff; /* White background */
        border-radius: 10px; /* Rounded corners */
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1); /* Subtle shadow for depth */
        border: 1px solid #dee2e6; /* Light border */
    }

    /* Style for form labels */
    .form-label {
        display: block;
        font-size: 1.1rem; /* Slightly larger font size */
        color: #333; /* Darker text color */
        margin-bottom: 8px; /* Space between label and input */
    }

    /* Style for text areas */
    .form-control {
        width: 100%;
        padding: 12px;
        font-size: 1rem; /* Consistent font size */
        border: 1px solid #ced4da; /* Light border */
        border-radius: 4px; /* Rounded corners */
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1); /* Inner shadow */
        transition: border-color 0.2s ease; /* Smooth border color transition */
    }

        .form-control:focus {
            border-color: #80bdff; /* Light blue border on focus */
            outline: none; /* Remove default outline */
            box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25); /* Blue shadow on focus */
        }

    /* Style for validation messages */
    .validation-message {
        color: #dc3545; /* Red color for error messages */
        font-size: 0.875rem; /* Slightly smaller font size */
        margin-top: 5px; /* Space between input and error message */
    }

    /* Style for the submit button */
    .btn-submit {
        display: inline-block;
        padding: 10px 20px;
        font-size: 1rem;
        color: #ffffff; /* White text color */
        background-color: #007bff; /* Primary button color */
        border: 1px solid #007bff; /* Border color matching the button */
        border-radius: 4px; /* Rounded corners */
        text-align: center; /* Center text */
        cursor: pointer; /* Pointer cursor on hover */
        transition: background-color 0.3s ease, border-color 0.3s ease; /* Smooth color transition */
    }

        .btn-submit:hover {
            background-color: #0056b3; /* Darker blue on hover */
            border-color: #004085; /* Darker border on hover */
        }
</style>

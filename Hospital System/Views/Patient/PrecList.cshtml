@model Hospital_System.Viewmodel.Allview

@{
    ViewBag.Title = "PrecList";
    Layout = "~/Views/Shared/_LayoutPatientPage1.cshtml";
}


    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    @using (Html.BeginForm())
    {

        <div class="sb2-2" style="margin-top: 58px; height: 120vh;">
            <div class="sb2-2-2">
                <ul>
                    <li>
                        <a href="/Patient/Dashboard"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
                    </li>
                    <li class="active-bre">
                        <a href="#"> Prescription</a>
                    </li>
                    <li class="page-back">
                        <a href="/Patient/Dashboard"><i class="fa fa-backward" aria-hidden="true"></i> Back</a>
                    </li>
                </ul>
            </div>
        </div>

        <div class="row" style="margin-left: 272px;">
            <div class="col-md-12" style="margin-top:-650px;width:96%">
                <div class="box-inn-sp">
                    <div class="inn-title">
                        <h4>Prescription</h4>

                    </div>

                    <div class="tab-inn">
                        <div class="table-responsive table-desi">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>Patient Name</th>
                                        <th>Doctor Name</th>
                                        <th>Problem</th>
                                        <th>Medicine Name</th>
                                        <th>Morning</th>
                                        <th>Afternoon</th>
                                        <th>Night</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.Medicines)
                                    {
                                        <tr>
                                            <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.DoctorName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Problem)</td>
                                            <td>@Html.DisplayFor(modelItem => item.MedicineName)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Morning)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Afternoon)</td>
                                            <td>@Html.DisplayFor(modelItem => item.Night)</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
@model IEnumerable<Hospital_System.Models.Doctor>

@{
    ViewBag.Title = "Doctors";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}


   

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <style>
        #doctorPopup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 20px;
            border: 1px solid #ccc;
            z-index: 1000;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            display: none; /* Hidden by default */
        }

        #overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: none; /* Hidden by default */
            z-index: 999;
        }

        .container {
            margin: 0 auto;
            padding: 20px;
            max-width: 1200px; /* Set a max width for the container */
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        .table {
            width: 100%;
            margin-bottom: 1rem;
            color: #212529;
            border-collapse: collapse;
            margin-left: 242px;
            margin-top: 70px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #dee2e6; /* Light grey border */
        }

        th {
            background-color: #007bff; /* Blue background for the header */
            color: white; /* White text for the header */
            font-weight: bold; /* Bold text for header */
        }

        tr:nth-child(even) {
            background-color: #f2f2f2; /* Light grey for even rows */
        }

        tr:hover {
            background-color: #e9ecef; /* Light highlight on hover */
        }

        a {
            color: #007bff; /* Link color */
            text-decoration: none; /* Remove underline from links */
        }

            a:hover {
                text-decoration: underline; /* Underline on hover */
            }
    </style>
</head>
<body>
    <div class="container">
        <h2>@ViewBag.Title</h2>
        <div class="table">
            <table>
                <thead>
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.First().FullName)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Email)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Department)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Designation)</th>
                        <th>@Html.DisplayNameFor(model => model.First().Status)</th>
                        <th>Profile</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Department)</td>
                            <td>@Html.DisplayFor(modelItem => item.Designation)</td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td>
                                <a href="javascript:void(0);" onclick="showDoctorDetails(@item.DoctorId)">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.ActionLink("Back", "Dashboard", "Patient")
        </div>
    </div>

    <div id="doctorPopup" style="display:none;">
         Placeholder for the doctor details partial view 
    </div>

    <div id="overlay" style="display:none;"></div>

    <script>
    function showDoctorDetails(doctorId) {
        $.ajax({
            url: '@Url.Action("Doctordetails", "Patient")',
            type: 'GET',
            data: { DoctorId: doctorId },
            success: function (data) {
                $('#doctorPopup').html(data);
                $('#doctorPopup').show();
                $('#overlay').show();
            },
            error: function () {
                alert("Error loading doctor details.");
            }
        });
    }

    function closePopup() {
        $('#doctorPopup').hide();
        $('#overlay').hide();
    }
    </script>
</body>
</html>





@model Hospital_System.Viewmodel.Allview

@{
    ViewBag.Title = "Doctors";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}




<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>@ViewBag.Title</title>
    <script>

        function Back() {

            window.location.href = "Dashboard";
        }
    </script>

    <style>
        #doctorPopup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 20px;
            border: 1px solid #ccc;
            z-index: 1000;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            display: none; /* Hidden by default */
        }

        #overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: none; /* Hidden by default */
            z-index: 999;
        }

        .container {
            margin: 0 auto;
            padding: 20px;
            max-width: 1200px; /* Set a max width for the container */
        }

        h2 {
            text-align: center;
            margin-bottom: 58px;
            color: #333;
        }


        .table {
            width: 72%;
            margin-bottom: 1rem;
            color: #212529;
            border-collapse: collapse;
            margin-left: 115px;
            margin-top: -35px;
            border-radius: 8px;
            overflow: hidden;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1) 
           
        }

        th {
            background-color: #007bff; /* Blue background for the header */
            color: white; /* White text for the header */
            font-weight: bold; /* Bold text for header */
            text-transform: uppercase; /* Uppercase text */
            letter-spacing: 1px; /* Space between letters */
        }

        tbody tr {
            transition: background-color 0.3s; /* Smooth transition */
        }

        tr:nth-child(even) {
            background-color: #f9f9f9; /* Light grey for even rows */
        }

        tr:hover {
            background-color: #e0e7ff; /* Light blue highlight on hover */
        }

        a {
            color: #007bff; /* Link color */
            text-decoration: none; /* Remove underline from links */
        }

            a:hover {
                text-decoration: underline; /* Underline on hover */
            }
    </style>

</head>

<body>


   
    <div class="container">
        <h2>@ViewBag.Title</h2>
        <div style=" margin-left: 258px; position:absolute; margin-top:-100px;">
            <button type="button" onclick="Back()" style="color: white; background-color: dodgerblue; border-radius: 5%; border-color: dodgerblue;"> Back</button>
        </div>

        <div class="table">
            <table>
                <thead>
                    <tr>
                        <th>FullName</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Designation</th>
                        <th>Status</th>
                        <th>Profile</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.Doctors)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.FullName)</td>
                            <td>@Html.DisplayFor(modelItem => item.Email)</td>
                            <td>@Html.DisplayFor(modelItem => item.Department)</td>
                            <td>@Html.DisplayFor(modelItem => item.Designation)</td>
                            <td>@Html.DisplayFor(modelItem => item.Status)</td>
                            <td>
                                <a href="javascript:void(0);" onclick="showDoctorDetails(@item.DoctorId)">View</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>

    <div id="doctorPopup" style="display:none;">
        Placeholder for the doctor details partial view
    </div>

    <div id="overlay" style="display:none;"></div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
       
        function showDoctorDetails(doctorId) {
            
                $.ajax({
                    url: '@Url.Action("Doctordetails", "Patient")',
                    type: 'GET',
                    data: { DoctorId: doctorId },
                    success: function (data) {
                        $('#doctorPopup').html(data);
                        $('#doctorPopup').show();
                        $('#overlay').show();
                    },
                    error: function () {
                        alert("Error loading doctor details.");
                    }
                });
            }
       

    function closePopup() {
        $('#doctorPopup').hide();
        $('#overlay').hide();
    }
    </script>


</body>
</html>




@model Hospital_System.Viewmodel.Allview

@{
    ViewBag.Title = "Drivers";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <title>@ViewBag.Title</title>

    <script>

        function Back() {

            window.location.href = "Dashboard";
        }
    </script>

    <style>
        #driverpopup {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 20px;
            border: 1px solid #ccc;
            z-index: 1000;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            display: none;
        }

        #overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: none;
            z-index: 999;
        }

        .container {
            margin: 0 auto;
            padding: 20px;
            max-width: 1200px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        table {
            width: 88%;
            margin-bottom: 1rem;
            color: #212529;
            border-collapse: collapse;
            margin-left: 36px;
            margin-top: 4px;
        }

        th, td {
            padding: 12px;
            text-align: left;
            border: 1px solid #dee2e6;
        }

        th {
            background-color: #007bff;
            color: white;
            font-weight: bold;
        }

        tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        tr:hover {
            background-color: #e9ecef;
        }

        a {
            color: #007bff;
            text-decoration: none;
        }

            a:hover {
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2> List  Of Drivers</h2>

        <div style=" margin-left: 258px;">
            <button type="button" onclick="Back()"> Back</button>
        </div>


        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Contact</th>
                    <th>Address</th>
                    <th>CNIC</th>
                    <th>Profile</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Drivers)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.Contact)</td>
                        <td>@Html.DisplayFor(modelItem => item.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.CNIC)</td>
                        <td>
                            <a href="javascript:void(0);" onclick="showGetdriverId(@item.Id)">View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>


    <div id="driverpopup" style="display:none;">
        <!-- Placeholder for the driver details partial view -->
    </div>

    <div id="overlay" style="display:none;"></div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        function showGetdriverId(driverId) {
           
            $.ajax({
                url: '@Url.Action("GetdriverId", "Patient")',
                type: 'GET',
                data: { DriverId: driverId },
                success: function (data) {
                    $('#driverpopup').html(data);
                    $('#driverpopup').show();
                    $('#overlay').show();
                },
                error: function () {
                    alert("Error loading driver details.");
                }
            });
        }

        function closePopup() {
            $('#driverpopup').hide();
            $('#overlay').hide();
        }
    </script>
</body>
</html>


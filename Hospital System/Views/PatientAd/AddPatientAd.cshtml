@model Hospital_System.Dash.DashboardDetails

@{
    ViewBag.Title = "Add Patient";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("AddPatientAd", "PatientAd"))
{
    <div style="position: relative; width: 85%; margin: 18px auto; background-color: white; padding: 20px; border-radius: 8px;">
        <h2>Add Patient</h2>

        <div>
            <div>
                <label for="Id">Id</label>
                @Html.TextBoxFor(m => m.mPatient.Id, new { @class = "form-control", @placeholder = "Enter Id" })
                @Html.ValidationMessageFor(m => m.mPatient.Id, "", new { @class = "text-danger" })
            </div>

            <div>
                <label for="Name">Name</label>
                @Html.TextBoxFor(m => m.mPatient.Name, new { @required = "required", @class = "form-control", @placeholder = "Enter your Name" })
                @Html.ValidationMessageFor(m => m.mPatient.Name, "", new { @class = "text-danger" })
            </div>

            <div>
                <label for="PhoneNumber">Phone Number</label>
                @Html.TextBoxFor(m => m.mPatient.PhoneNumber, new { @required = "required", @class = "form-control", @placeholder = "Enter your Mobile Number" })
                @Html.ValidationMessageFor(m => m.mPatient.PhoneNumber, "", new { @class = "text-danger" })
            </div>

            <div>
                <label for="BloodGroup">Blood Group</label>
                @Html.DropDownListFor(m => m.mPatient.BloodGroup, new SelectList(new List<SelectListItem>
                {
                    new SelectListItem{Value="", Text="Select Blood Group"},
                    new SelectListItem { Value = "A+", Text = "A+" },
                    new SelectListItem { Value = "B+", Text = "B+" },
                    new SelectListItem { Value = "O+", Text = "O+" },
                    new SelectListItem { Value = "AB+", Text = "AB+"},
                    new SelectListItem { Value = "AB-", Text = "AB-"},
                    new SelectListItem { Value = "A-", Text = "A-" },
                    new SelectListItem { Value = "B-", Text = "B-" },
                    new SelectListItem { Value = "O-", Text = "O-" },
                }), "", new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.mPatient.BloodGroup, "", new { @class = "text-danger" })
            </div>

            <div>
                <label for="Gender">Gender</label>
                @Html.DropDownListFor(m => m.mPatient.Gender, new SelectList(new List<SelectListItem>
                {
                    new SelectListItem{Value="", Text="Select Gender"},
                    new SelectListItem { Value = "Male", Text = "Male" },
                    new SelectListItem { Value = "Female", Text = "Female" },
                    new SelectListItem { Value = "Others", Text = "Others" },
                }), "", new { @class = "form-control" })
            </div>

            <div>
                <input type="submit" value="Submit" class="btn-submit">
            </div>
        </div>

        <div style="margin-top: -60%; position: absolute; margin-left: 0%;">
            <button type="button" class="back-button" onclick="Back()">Back</button>
        </div>
    </div>
}

<style>
    /* Styling for labels and input fields */
    label {
        font-weight: bold;
        margin-bottom: 5px;
        display: block;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        margin-bottom: 15px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    .text-danger {
        color: red;
        font-size: 0.9em;
        margin-top: -10px;
        margin-bottom: 10px;
    }

    .btn-submit {
        background-color: #4CAF50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        .btn-submit:hover {
            background-color: #45a049;
        }

    .back-button {
        background-color: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        padding: 10px 20px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
    }

        .back-button:hover {
            background-color: #0056b3;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        .back-button:focus {
            outline: none;
        }
</style>

<script>
    function Back() {
        window.location.href = "/Dashboard/DashboardView";
    }
</script>



@model Hospital_System.Dash.DashboardDetails

@{
    ViewBag.Title = "PatientList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script>
    function CeateNew() {

        window.location.href = 'AddPatientAd';
    }
</script>

@using (Html.BeginForm())
{
    <div style="position: absolute; width: 85%; background-color: white;">
        <div>
            <div><input type="button" value="CreateNew" onclick="CeateNew()"></div>
            @*<div>
                    <input type="search" id="patient" name="patient">
                    <input type="submit" value="Search">
                </div>*@

            <table>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>PhoneNumber</th>
                    <th>BloodGroup</th>
                    <th>Gender</th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model.mPatients)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                        <td>@Html.DisplayFor(modelItem => item.BloodGroup)</td>
                        <td>@Html.DisplayFor(modelItem => item.Gender)</td>
                        <td style="display: flex; gap: 10px;">


                            <a href="@Url.Action("PatientEdit", new { Id = item.Id })">
                                <i class="fas fa-edit" style="color:blue;"></i>
                            </a>

                         
                            <a href="javascript:void(0);" onclick="confirmDelete('@Url.Action("PatientDelete", new {Id = item.Id })')">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background-color: #f4f4f4;
    }

    h1 {
        color: #333;
        text-align: center;
    }

    div {
        margin-bottom: 20px;
    }

    input[type="button"], input[type="submit"] {
        padding: 10px 15px;
        margin-right: 10px;

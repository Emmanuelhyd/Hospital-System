@model IEnumerable<Hospital_System.Models.MPrescription>
@{
    ViewBag.Title = "PrecList";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}



@using (Html.BeginForm("PrecList", "Prescription"))
{
    <div style="position: absolute; margin-left: 200px; width: 81%; height: 100vh; background-color: white; padding: 20px;">
        <div>
            <h2>Your Prescription</h2>
            <table style="width:100%; border-collapse:collapse; margin-top:20px;" border="1">
                <thead>
                    <tr style="background-color: #007bff; color: white;">
                        <th style="padding:10px;text-align:left;">
                            @Html.DisplayNameFor(model => model.PatientName)
                        </th>
                        <th style="padding:10px;text-align:left;">
                            @Html.DisplayNameFor(model => model.DoctorName)
                        </th>
                        <th style="padding:10px;text-align:left;">
                            @Html.DisplayNameFor(model => model.Problem)
                        </th>
                        <th style="padding:10px;text-align:left;">
                            @Html.DisplayNameFor(model => model.Medicine)
                        </th>
                        <th style="padding:10px;text-align:left;">
                            @Html.DisplayNameFor(model => model.Morning)
                        </th>
                        <th style="padding:10px;text-align:left;">
                            @Html.DisplayNameFor(model => model.Afternoon)
                        </th>
                        <th style="padding:10px;text-align:left;">
                            @Html.DisplayNameFor(model => model.Night)
                        </th>
                        <th style="padding:10px;"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr style="background-color:#ffffff;">
                            <td style="padding:10px;">
                                @Html.DisplayFor(modelItem => item.PatientName)
                            </td>
                            <td style="padding:10px;">
                                @Html.DisplayFor(modelItem => item.DoctorName)
                            </td>
                            <td style="padding:10px;">
                                @Html.DisplayFor(modelItem => item.Problem)
                            </td>
                            <td style="padding:10px;">
                                @Html.DisplayFor(modelItem => item.Medicine)
                            </td>
                            <td style="padding:10px;">
                                @Html.DisplayFor(modelItem => item.Morning)
                            </td>
                            <td style="padding:10px;">
                                @Html.DisplayFor(modelItem => item.Afternoon)
                            </td>
                            <td style="padding:10px;">
                                @Html.DisplayFor(modelItem => item.Night)
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            @Html.ActionLink("Back", "Dashboard", "Patient")
        </div>
    </div>
}



@model Hospital_System.Models.MRegistration
@{
    ViewBag.Title = "RegistrationPage";
    Layout = "~/Views/Shared/_PatientLayout.cshtml";
}

@using (Html.BeginForm())
{
    <div style="width:100%;height:100%;background-color:#f4f4f4;margin-left:200px;position  :absolute;margin-top:250px; ">
        <div class="form-container" style="width:250px;height:550px;;background-color:#ffffff;margin:-200px auto;padding:20px;border-radius:8px;box-shadow:0 0 10px rgba(0, 0, 0, 0.1);">
            <div style="font-size:20px;font-weight:bold;margin-bottom:15px;">Register with Your Details</div>

            <div style="margin-top:10px;">

                <div class="form-group" style="margin-bottom:15px;">
                    <label for="UserName" style="display:block;font-weight:bold;margin-bottom:5px;">@Html.LabelFor(m => m.UserName)</label>
                    @Html.TextBoxFor(m => m.UserName, new { style = "width:100%;padding:8px;border:1px solid #ccc;border-radius:4px;box-sizing:border-box;font-size:16px;" })
                </div>

                <div class="form-group" style="margin-bottom:15px;">
                    <label for="FirstName" style="display:block;font-weight:bold;margin-bottom:5px;">@Html.LabelFor(m => m.FirstName)</label>
                    @Html.TextBoxFor(m => m.FirstName, new { style = "width:100%;padding:8px;border:1px solid #ccc;border-radius:4px;box-sizing:border-box;font-size:16px;" })
                </div>

                <div class="form-group" style="margin-bottom:15px;">
                    <label for="LastName" style="display:block;font-weight:bold;margin-bottom:5px;">@Html.LabelFor(m => m.LastName)</label>
                    @Html.TextBoxFor(m => m.LastName, new { style = "width:100%;padding:8px;border:1px solid #ccc;border-radius:4px;box-sizing:border-box;font-size:16px;" })
                </div>

                <div class="form-group" style="margin-bottom:15px;">
                    <label for="Password" style="display:block;font-weight:bold;margin-bottom:5px;">@Html.LabelFor(m => m.Password)</label>
                    @Html.TextBoxFor(m => m.Password, new { type = "password", style = "width:100%;padding:8px;border:1px solid #ccc;border-radius:4px;box-sizing:border-box;font-size:16px;" })
                </div>

                <div class="form-group" style="margin-bottom:15px;">
                    <label for="Email" style="display:block;font-weight:bold;margin-bottom:5px;">@Html.LabelFor(m => m.Email)</label>
                    @Html.TextBoxFor(m => m.Email, new { style = "width:100%;padding:8px;border:1px solid #ccc;border-radius:4px;box-sizing:border-box;font-size:16px;" })
                </div>

                <div class="form-group" style="margin-bottom:15px;">
                    <label for="PhoneNumber" style="display:block;font-weight:bold;margin-bottom:5px;">@Html.LabelFor(m => m.PhoneNumber)</label>
                    @Html.TextBoxFor(m => m.PhoneNumber, new { style = "width:100%;padding:8px;border:1px solid #ccc;border-radius:4px;box-sizing:border-box;font-size:16px;" })
                </div>

                <div class="form-group" style="margin-bottom:15px;">
                    <label for="Gender" style="display:block;font-weight:bold;margin-bottom:5px;">@Html.LabelFor(m => m.Gender)</label>
                    <select name="Gender" id="Gender" style="width:100%;padding:8px;border:1px solid #ccc;border-radius:4px;box-sizing:border-box;font-size:16px;">
                        <option value="" disabled>Select Gender</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>

            </div>

            <div class="form-buttons" style="text-align:center;">
                <input type="submit" value="Register" style="background-color:#007bff;border:none;color:#fff;padding:10px 20px;border-radius:4px;cursor:pointer;font-size:16px;">
            </div>
        </div>
    </div>
}

@model Hospital_System.Dash.DashboardDetails

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@using (Html.BeginForm("AddRole", "RolesAdmin"))
{
    <div style="width: 85%; margin: 20px auto; background-color: white; padding: 20px; border-radius: 8px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);">
        <h2 style="text-align: center;">Add Roles</h2>

        <div>
            <button type="button" class="back-button" onclick="Back()">Back</button>
        </div>

        <div class="form-row">
            <!-- Role ID -->
            <div class="form-group">
                <label for="Id">Id</label>
                @Html.TextBoxFor(m => m.RoleDO.Id, new { @class = "form-control", @placeholder = "Enter Id" })
            </div>

            <!-- Role Name -->
            <div class="form-group">
                <label for="RoleName">Role Name</label>
                @Html.TextBoxFor(m => m.RoleDO.Roles, new { @required = "required", @class = "form-control", @placeholder = "Role Name" })
            </div>
        </div>

        <div class="form-row">
            <!-- Type -->
            <div class="form-group">
                <label for="Type">Type</label>
                @Html.TextBoxFor(m => m.RoleDO.Type, new { @required = "required", @class = "form-control", @placeholder = "Type" })
            </div>
        </div>

        <div>
            <input type="submit" value="Submit" class="btn-submit" />
        </div>
    </div>
}

<script>
    function Back() {
        window.location.href = "/Dashboard/DashboardView";
    }
</script>

<style>
    /* Styling for the entire form container */
    div {
        margin-bottom: 20px;
    }

    .form-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 15px;
        flex-wrap: wrap; /* Ensure wrapping on small screens */
    }

    .form-group {
        flex: 1 1 calc(50% - 20px); /* Make each form group take up 50% of the space */
        margin-right: 20px;
        box-sizing: border-box;
    }

    .form-group:last-child {
        margin-right: 0;
    }

    label {
        display: block;
        margin-bottom: 5px;
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        transition: border-color 0.3s ease;
    }

    .form-control:focus {
        border-color: #4CAF50;
        outline: none;
    }

    .btn-submit {
        background-color: #4CAF50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        width: 100%; /* Full width button */
        margin-top: 20px;
        transition: background-color 0.3s;
    }

    .btn-submit:hover {
        background-color: #45a049;
    }

    .back-button {
        background-color: #007bff;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .back-button:hover {
        background-color: #0056b3;
    }

    /* Ensure the layout is responsive */
    media (max-width: 768px) {
        .form-group {
            flex: 1 1 100%; /* Stack form fields on smaller screens */
            margin-right: 0;
        }

        .btn-submit {
            width: auto; /* Allow button to shrink */
        }
    }
</style>

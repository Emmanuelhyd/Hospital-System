    <script>
        $(document).ready(function () {
            // Open/Close collapsible sections when clicked
            $('#sidebar-menu .collapsible-header').on('click', function () {
                var target = $(this).attr('data-bs-target');
                var $target = $(target);

                // Toggle the collapse state of the clicked menu item
                $target.collapse('toggle');

                // Optionally, close other menus (if you want only one open at a time)
                $('#sidebar-menu .collapse').not($target).collapse('hide');
            });
        });
    </script>

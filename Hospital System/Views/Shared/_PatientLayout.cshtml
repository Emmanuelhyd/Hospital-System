@model Hospital_System.Viewmodel.Allview

    <!DOCTYPE html>
    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    </head>
    <body>
        @using (Html.BeginForm())
        {
            <nav class="navbar navbar-expand-lg" style="background-color: #0094ff;">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        @if (Model?.Menus != null && Model.Menus.Any())
                        {
                            foreach (var item in Model.Menus.Where(m => m.ParentId == null))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="@item.Url" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" style="color:white">
                                        @item.Name
                                    </a>
                                    @if (Model.Menus.Any(x => x.ParentId == item.Id))
                                    {
                                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                            @foreach (var subItem in Model.Menus.Where(x => x.ParentId == item.Id))
                                            {
                                                <a class="dropdown-item" href="@subItem.Url">@subItem.Name</a>
                                            }
                                        </div>
                                    }
                                </li>
                            }
                        }
                    </ul>
                </div>
            </nav>
        }

        <div class="container">
            @RenderBody()
        </div>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    </body>
    </html>




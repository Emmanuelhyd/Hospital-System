<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>

    <!-- Include Font Awesome for Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-k6RqeWeci5ZR/Lv4MR0sA0FfDOMC1s48C8H4l9eG9yE2R/IJuj7cP9dfz1Zp4jR" crossorigin="anonymous" />

    <style>
        /* Basic reset for margins and paddings */
        body, ul, li {
            margin: 0;
            padding: 0;
        }

        /* Container for sidebar */
        #tab11 {
            background-color: #f4f4f4;
            border: 1px solid #ddd;
            border-radius: 8px;
            overflow: hidden;
            width: 250px;
            margin-left: 10px;
            position: absolute;
        }

        /* Header styling */
        .container1 {
            padding: 10px;
            background-color: #007bff;
            color: white;
            text-align: center;
        }

        /* Unordered list styling */
        ul {
            list-style-type: none;
            padding: 0;
        }

        /* List items styling */
        li {
            position: relative;
            margin: 5px 0; /* Adjust gap between buttons */
        }

        /* Button styling */
        .btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 25px;
            border-radius: 4px;
            cursor: pointer;
            width: 100%;
            text-align: left;
            font-size: 16px;
            transition: background-color 0.3s;
            height: 70px;
        }

            /* Hover effect for buttons */
            .btn:hover {
                background-color: #0056b3;
            }

        /* Container for button dropdown content */
        .btn-container {
            display: none; /* Initially hidden */
            background-color: #ffffff;
            border: 1px solid #ddd;
            border-radius: 4px;
            position: relative; /* Position relative to li */
            z-index: 1;
            width: 100%; /* Make dropdown full width */
        }

        /* Show dropdown on hover */
        li:hover .btn-container {
            display: block; /* Show dropdown on hover */
        }

        /* Dropdown links styling */
        .btn-container a {
            display: block;
            padding: 17px;
            color: #007bff;
            text-decoration: none;
            font-size: 16px;
        }

            /* Hover effect for dropdown links */
            .btn-container a:hover {
                background-color: #ddd;
            }

        /* Space between icon and text */
        .btn i {
            margin-right: 8px;
        }
    </style>
</head>
<body>
    <div id="tab11">
        <div style="padding: 10px; text-align: center;">
            @if (Session["Username"] != null)
            {
                <strong>
                    <i class="fas fa-user-circle"></i>
                       Welcome, @Session["Username"]!
                </strong>
            }
        </div>
        <ul>
            <li>
                <button class="btn">
                    <i class="fas fa-tachometer-alt"></i> Dashboard
                </button>
                <div class="btn-container">
                    <a href="@Url.Action("Dashboard", "Patient")">Dashboard</a>
                </div>
            </li>
            <li>
                <button class="btn">
                    <i class="fas fa-user"></i> Profile
                </button>
                <div class="btn-container">
                    <a href="@Url.Action("Updateprofile", "Patient")">Update Profile</a>
                </div>
            </li>
            <li>
                <button class="btn">
                    <i class="fas fa-user-md"></i> Doctors
                </button>
                <div class="btn-container">
                    <a href="@Url.Action("DoctorList", "Doctor")">Available Doctors</a>
                </div>
            </li>
            <li>
                <button class="btn">
                    <i class="fas fa-calendar-check"></i> Appointment
                </button>
                <div class="btn-container">
                    <a href="@Url.Action("AddBook", "Appointment")">Request Appointments</a>
                    <a href="@Url.Action("BookList", "Appointment")">Appointment List</a>
                </div>
            </li>
            <li>
                <button class="btn">
                    <i class="fas fa-prescription"></i> Prescription
                </button>
                <div class="btn-container">
                    <a href="@Url.Action("PrecList", "Patient")">Your Prescription</a>
                </div>
            </li>
            <li>
                <button class="btn">
                    <i class="fas fa-exclamation-circle"></i> Complaint
                </button>
                <div class="btn-container">
                    <a href="@Url.Action("RegisterComplaint", "Complaint")">Add Complaint</a>
                    <a href="@Url.Action("ComplaintList", "Complaint")">List of Complaints</a>
                </div>
            </li>
            <li>
                <button class="btn">
                    <i class="fas fa-cog"></i> Manage
                </button>
                <div class="btn-container">
                    <a href="@Url.Action("Changepassword", "Patient")">Change Password</a>
                </div>
            </li>
        </ul>
    </div>

    <div>
        @RenderBody() <!-- Main content will be rendered here -->
    </div>
</body>
</html>

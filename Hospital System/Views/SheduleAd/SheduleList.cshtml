

@model Hospital_System.Dash.DashboardDetails

@{
    ViewBag.Title = "SheduleList";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<script>
    function CreateNew() {

        window.location.href = 'AddSheduleAd';
    }
</script>

@using (Html.BeginForm())
{
    <div style="position: absolute; width: 85%; background-color: white;">
        <div>
            <div>
                <input type="button" value="CreateNew" onclick="CreateNew()">
                <input type="search" id="Shedule" name="Shedule">
                <input type="submit" value="Search">
            </div>

            <table>
                <tr>
                    <th>Id</th>
                    <th>DoctorName</th>
                    <th>StartTime</th>
                    <th>EndTime</th>
                    @*<th>@Html.DisplayNameFor(model => model.PerPatientTime)</th>*@
                    <th>status</th>
                    <th>Action</th>
                </tr>
                @foreach (var item in Model.mShedules)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.Id)</td>
                        <td>@Html.DisplayFor(modelItem => item.DoctorName)</td>
                        <td>@Html.DisplayFor(modelItem => item.StartTime)</td>
                        <td>@Html.DisplayFor(modelItem => item.EndTime)</td>
                        @*<td>@Html.DisplayFor(modelItem => item.PerPatientTime)</td>*@
                        <td>@Html.DisplayFor(modelItem => item.status)</td>
                        <td style="display: flex; gap: 10px;">
                            <a href="@Url.Action("SLEdit", new { Id = item.Id })">
                                <i class="fas fa-edit" style="color:blue;"></i>
                            </a>

                            <a href="@Url.Action("SheduleDelete", new { Id = item.Id })">
                                <i class="fas fa-trash-alt" style="color:red;"></i>
                            </a>



                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background-color: #f4f4f4;
    }

    h1 {
        color: #333;
        text-align: center;
    }

    div {
        margin-bottom: 20px;
    }

    input[type="button"], input[type="submit"] {
        padding: 10px 15px;
        margin-right: 10px;
        border: none;
        background-color: #3051bd;
        color: white;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        input[type="button"]:hover, input[type="submit"]:hover {
            background-color: #3051bd;
        }

    input[type="search"] {
        padding: 10px;
        width: 200px;
        border: 1px solid #ccc;
        border-radius: 4px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: white;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .action-link {
        margin-right: 10px;
    }
</style>
@model Hospital_System.Dash.DashboardDetails

@{
    ViewBag.Title = "Add Profile";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    /* Styling for form rows */
    .form-row {
        display: flex;
        justify-content: space-between;
        margin-bottom: 20px; /* Space between rows */
        flex-wrap: wrap; /* Allow items to wrap to next line on smaller screens */
    }

    /* Styling for each form field */
    .form-group {
        flex: 1 1 calc(50% - 20px); /* 50% width minus gap */
        margin-right: 20px; /* Space between columns */
        box-sizing: border-box; /* Ensure padding is included in total width */
    }

    /* Remove margin from last form group in row */
    .form-group:last-child {
        margin-right: 0;
    }

    /* Label styling */
    label {
        display: block;
        margin-bottom: 5px; /* Space between label and input */
        font-weight: bold;
        color: #555;
    }

    /* Input field styling */
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        transition: border-color 0.3s ease;
    }

    /* Focused input field styling */
    .form-control:focus {
        border-color: #4CAF50;
        outline: none; /* Remove default outline */
    }

    /* Submit button styling */
    .btn-submit {
        background-color: #4CAF50;
        color: white;
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
        font-size: 16px;
        margin-top: 20px;
        transition: background-color 0.3s;
    }

    /* Hover effect for submit button */
    .btn-submit:hover {
        background-color: #45a049;
    }

    /* Error message styling */
    .text-danger {
        color: red;
        font-size: 0.9em;
    }

    /* Responsive design */
    media (max-width: 768px) {
        .form-group {
            flex: 1 1 100%; /* Make form groups take full width */
            margin-right: 0;
        }
    }
</style>

@using (Html.BeginForm("AddProfile", "UpdateProfile"))
{
    <!-- Row 1 -->
    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.UpdateDO.PatientId)
            @Html.TextBoxFor(m => m.UpdateDO.PatientId, new { @placeholder = "Patient ID", @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UpdateDO.UserName)
            @Html.TextBoxFor(m => m.UpdateDO.UserName, new { @placeholder = "User Name", @class = "form-control" })
        </div>
    </div>

    <!-- Row 2 -->
    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.UpdateDO.FirstName)
            @Html.TextBoxFor(m => m.UpdateDO.FirstName, new { @placeholder = "First Name", @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UpdateDO.LastName)
            @Html.TextBoxFor(m => m.UpdateDO.LastName, new { @placeholder = "Last Name", @class = "form-control" })
        </div>
    </div>

    <!-- Row 3 -->
    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.UpdateDO.Email)
            @Html.TextBoxFor(m => m.UpdateDO.Email, new { @placeholder = "Email", @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UpdateDO.PhoneNo)
            @Html.TextBoxFor(m => m.UpdateDO.PhoneNo, new { @class = "form-control", placeholder = "Enter Phone Number" })
            @Html.ValidationMessageFor(m => m.UpdateDO.PhoneNo, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Row 4 -->
    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.UpdateDO.BloodGroup)
            @Html.TextBoxFor(m => m.UpdateDO.BloodGroup, new { @placeholder = "Blood Group", @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UpdateDO.Gender)
            @Html.TextBoxFor(m => m.UpdateDO.Gender, new { @placeholder = "Gender", @class = "form-control" })
        </div>
    </div>

    <!-- Row 5 -->
    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.UpdateDO.Age)
            @Html.TextBoxFor(m => m.UpdateDO.Age, new { @placeholder = "Age", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UpdateDO.Age, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UpdateDO.EmergencyContact)
            @Html.TextBoxFor(m => m.UpdateDO.EmergencyContact, new { @class = "form-control", placeholder = "Emergency Contact" })
            @Html.ValidationMessageFor(m => m.UpdateDO.EmergencyContact, "", new { @class = "text-danger" })
        </div>
    </div>

    <!-- Row 6 -->
    <div class="form-row">
        <div class="form-group">
            @Html.LabelFor(m => m.UpdateDO.Address)
            @Html.TextBoxFor(m => m.UpdateDO.Address, new { @placeholder = "Address", @class = "form-control" })
            @Html.ValidationMessageFor(m => m.UpdateDO.Address, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UpdateDO.Type)
            @Html.TextBoxFor(m => m.UpdateDO.Type, new { @placeholder = "Type", @class = "form-control" })
        </div>
    </div>

    <!-- Submit button -->
    <div class="form-row">
        <input type="submit" value="Update Profile" class="btn-submit" />
    </div>
}

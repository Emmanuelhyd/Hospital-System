@model Hospital_System.Dash.DashboardDetails@{    ViewBag.Title = "AddProfile";    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";}<style>/*    body {        font-family: Arial, sans-serif;        margin: 20px;    }*/    .form-row {        display: flex;        align-items: center;        / Center align items vertically / margin-bottom: 15px;    }    .form-group {        flex: 1;        margin-right: 20px;        / Space between columns / box-sizing: border-box;        / Ensure padding is included in total width /    }        .form-group:last-child {            margin-right: 0;            / Remove margin from the last item /        }    label {        display: block;        / Make labels block-level elements / margin-bottom: 5px;        / Space between label and input /    }    .form-control {        width: 100%;        padding: 10px;        border: 1px solid #ccc;        border-radius: 4px;        transition: border-color 0.3s;    }        .form-control:focus {            border-color: #4CAF50;            / Change border color on focus / outline: none;            / Remove outline /        }    .btn-submit {        background-color: #4CAF50;        color: white;        padding: 10px 15px;        border: none;        border-radius: 4px;        cursor: pointer;        font-size: 16px;        margin-top: 20px;        / Space above the button / transition: background-color 0.3s;    }        .btn-submit:hover {            background-color: #45a049;            / Darker green on hover /        }    .text-danger {        color: red;        font-size: 0.9em;    }</style>@using (Html.BeginForm("AddProfile", "UpdateProfile")){<!-- Row 1 --><div class="form-row">    <div class="form-group">        @Html.LabelFor(m => m.UpdateDO.PatientId)        @Html.TextBoxFor(m => m.UpdateDO.PatientId, new { @placeholder = "Patient ID", @class = "form-control" })    </div>    <div class="form-group">        @Html.LabelFor(m => m.UpdateDO.UserName)        @Html.TextBoxFor(m => m.UpdateDO.UserName, new { @placeholder = "User Name", @class = "form-control" })    </div></div><!-- Row 2 --><div class="form-row">    <div class="form-group">        @Html.LabelFor(m => m.UpdateDO.FirstName)        @Html.TextBoxFor(m => m.UpdateDO.FirstName, new { @placeholder = "First Name", @class = "form-control" })    </div>    <div class="form-group">        @Html.LabelFor(m => m.UpdateDO.LastName)        @Html.TextBoxFor(m => m.UpdateDO.LastName, new { @placeholder = "Last Name", @class = "form-control" })    </div></div><!-- Row 3 --><div class="form-row">    <div class="form-group">        @Html.LabelFor(m => m.UpdateDO.Email)        @Html.TextBoxFor(m => m.UpdateDO.Email, new { @placeholder = "Email", @class = "form-control" })    </div>    <div class="form-group">        @Html.LabelFor(m => m.UpdateDO.PhoneNo)        @Html.TextBoxFor(m => m.UpdateDO.PhoneNo, new { @class = "form-control", placeholder = "Enter Phone Number" })        @Html.ValidationMessageFor(m => m.UpdateDO.PhoneNo, "", new { @class = "text-danger" })    </div></div><!-- Row 4 --><div class="form-row">    <div class="form-group">        @Html.LabelFor(m => m.UpdateDO.BloodGroup)        @Html.TextBoxFor(m => m.UpdateDO.BloodGroup, new { @placeholder = "Blood Group", @class = "form-control" })    </div>    <div class="form-group">        @Html.LabelFor(m => m.UpdateDO.Gender)        @Html.TextBoxFor(m => m.UpdateDO.Gender, new { @placeholder = "Gender", @class = "form-control" })    </div></div><!-- Row 5 --><div class="form-row">    <div class="form-group">        @Html.LabelFor(m => m.UpdateDO.Age)        @Html.TextBoxFor(m => m.UpdateDO.Age, new { @placeholder = "Age", @class = "form-control" })        @Html.ValidationMessageFor(m => m.UpdateDO.Age, "", new { @class = "text-danger" })    </div>    <div class="form-group">        @Html.LabelFor(m => m.UpdateDO.EmergencyContact)        @Html.TextBoxFor(m => m.UpdateDO.EmergencyContact, new { @class = "form-control", placeholder = "Emergency Contact" })        @Html.ValidationMessageFor(m => m.UpdateDO.EmergencyContact, "", new { @class = "text-danger" })    </div></div><!-- Row 6 --><div class="form-row">    <div class="form-group">        @Html.LabelFor(m => m.UpdateDO.Address)        @Html.TextBoxFor(m => m.UpdateDO.Address, new { @placeholder = "Address", @class = "form-control" })        @Html.ValidationMessageFor(m => m.UpdateDO.Address, "", new { @class = "text-danger" })    </div>    <div class="form-group">        @Html.LabelFor(m => m.UpdateDO.Type)        @Html.TextBoxFor(m => m.UpdateDO.Type, new { @placeholder = "Type", @class = "form-control" })    </div></div><div class="form-row">    <input type="submit" value="Update Profile" class="btn-submit" /></div>}
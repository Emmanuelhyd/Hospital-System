@model Hospital_System.Models.UserModel

@{
    ViewBag.Title = "Blood Request Form";
    Layout = "~/Views/Shared/_UserLayoutBlod.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Blood Request Form</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: #f7f7f7;
            padding: 20px;
            margin-top: -35px;
        }

        .form-container {
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin: auto;
            max-width: 900px;
        }

        h2 {
            color: #343a40;
            margin-bottom: 20px;
            text-align: center;
        }

        .error-message {
            color: red;
            font-size: 0.85rem;
        }

        .btn-primary {
            background-color: #007bff;
            border: none;
        }

            .btn-primary:hover {
                background-color: #0056b3;
            }

        .btn-submit {
            width: 33%;
        }
    </style>
</head>
<body>
    <div class="form-container">
        @using (Html.BeginForm("BloodRequestForm", "User"))
        {
            <h2>Blood Request Form</h2>

            <div class="mb-3 row">
                <div class="col-12 col-md-6">
                    @Html.LabelFor(m => m.FirstName, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "Enter First Name" })
                </div>
                <div class="col-12 col-md-6">
                    @Html.LabelFor(m => m.LastName, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Enter Last Name" })
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-12 col-md-6">
                    @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number" })
                </div>
                <div class="col-12 col-md-6">
                    @Html.LabelFor(m => m.EmailId, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", placeholder = "Email Address" })
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-12 col-md-6">
                    @Html.Label("Gender", new { @class = "form-label" })
                    @Html.DropDownList("Gender", new SelectList(new List<SelectListItem>
                    {
                        new SelectListItem { Value = "Male", Text = "Male" },
                        new SelectListItem { Value = "Female", Text = "Female" },
                        new SelectListItem { Value = "Other", Text = "Other" }
                    }, "Value", "Text"), "Select Gender", new { @class = "form-select" })
                </div>
                <div class="col-12 col-md-6">
                    @Html.LabelFor(m => m.BloodGroup, new { @class = "form-label" })
                    @Html.DropDownList("BloodGroup", new SelectList(new List<SelectListItem>
                    {
                        new SelectListItem { Value = "A+", Text = "A+" },
                        new SelectListItem { Value = "A-", Text = "A-" },
                        new SelectListItem { Value = "B+", Text = "B+" },
                        new SelectListItem { Value = "B-", Text = "B-" },
                        new SelectListItem { Value = "O+", Text = "O+" },
                        new SelectListItem { Value = "O-", Text = "O-" },
                        new SelectListItem { Value = "AB+", Text = "AB+" },
                        new SelectListItem { Value = "AB-", Text = "AB-" }
                    }, "Value", "Text"), "Select Blood Group", new { @class = "form-select" })
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-12 col-md-6">
                    @Html.LabelFor(m => m.Quantity, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Quantity, new { @class = "form-control", placeholder = "Quantity (e.g., 1.5L)" })
                </div>
                <div class="col-12 col-md-6">
                    @Html.LabelFor(m => m.Decease, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Decease, new { @class = "form-control", placeholder = "Decease" })
                </div>
            </div>
            <div class="mb-3 row">
                <div class="col-12 col-md-6">
                    @Html.LabelFor(m => m.StreetAddress, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.StreetAddress, new { @class = "form-control", placeholder = "Street Address" })
                </div>
                <div class="col-12 col-md-6">
                    @Html.LabelFor(m => m.City, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "City" })
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-12 col-md-6">
                    @Html.LabelFor(m => m.State, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.State, new { @class = "form-control", placeholder = "State" })
                </div>
                <div class="col-12 col-md-6">
                    @Html.LabelFor(m => m.ZipCode, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.ZipCode, new { @class = "form-control", placeholder = "Zip Code" })
                </div>
            </div>

            <div class="mb-3 row">
                <div class="col-12">
                    @Html.LabelFor(m => m.Country, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Country, new { @class = "form-control", placeholder = "Country" })
                </div>
            </div>

            <div class="text-center">
                <input type="submit" class="btn btn-primary btn-submit" value="Submit">
            </div>
        }
    </div>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

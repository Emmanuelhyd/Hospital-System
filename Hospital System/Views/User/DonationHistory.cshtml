@model IEnumerable<Hospital_System.Models.UserModel>

@{
    ViewBag.Title = "Donation History";
    Layout = "~/Views/Shared/_UserLayoutBlood.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Donation History</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>

        .content {
          
            background: white;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 30px;
            margin-top: -50%;
            margin-left: 25%;
            max-width: 65%;
            position: relative;
            font-family: 'Arial', sans-serif;
        }
        

        .back-button {
            position: absolute;
            margin-top:-13%;
            margin-left:-3%;
            color: #fff;
            background: #e74715;
            background: -webkit-linear-gradient(to top, #d83d0c, #FF5722);
            background: linear-gradient(to top, #d83d0c, #FF5722);
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

            .back-button:hover {
                background-color: darkblue; /* Darker blue on hover */
            }

        .card-container {
            display: flex;
            flex-direction: column;
            gap:15px;
        }

        .card {
            border: 1px solid #dee2e6;
            border-radius: 8px;
            overflow: hidden;
        }

        .card-header {
            background-color: #f8f9fa;
            padding:10px;
            text-align: center;
        }

        .card-body {
            padding: 10px;
        }

        .card-footer {
            padding: 10px;
            text-align: center;
        }

        .action-links {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .btn-remove {
            background-color: #ff6f61;
            padding: 10px 15px;
            border-radius: 5px;
            color: white;
            border: none;
            cursor: pointer;
            text-decoration: none;
            display: flex;
            align-items: center;
        }

            .btn-remove:hover {
                background-color: #e63946;
            }

        .btn-icon {
            margin-right: 5px;
        }

        .search-container {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .search-input {
            padding: 10px;
            width: 60%;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        .search-button {
            padding: 10px 15px;
            border-radius: 5px;
            border: none;
            background-color: #007bff;
            color: white;
            cursor: pointer;
            margin-left: 10px;
        }

            .search-button:hover {
                background-color: #0056b3;
            }

        .highlight {
            background-color: yellow;
            color: black;
        }

        .alert {
            color: red;
            display: none;
            text-align: center;
        }

        .print-button {
            background-color: red;
            color: white;
            padding: 5px 10px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 20px;
        }

            .print-button:hover {
                background-color: darkred;
            }
    </style>
</head>
<body>
    <div class="content">
        <button class="back-button" onclick="window.history.back()">Back</button>
        <div class="text-center" style="padding: 17px 40px; background: #002147; border-radius: 5px; margin-top: -80px; margin-left: -30px; width: 100%; color: white; position: absolute;">
            <h4>My Donation History</h4>
        </div>
        @using (Html.BeginForm())
        {
            <div class="card-container">
                @if (Model != null && Model.Any())
                {
                    foreach (var user in Model)
                    {
                        <div class="card">

                            <div class="card-header">
                                <h5>
                                    @Html.DisplayFor(m => user.FirstName) @Html.DisplayFor(m => user.LastName)
                                </h5>
                            </div>
                            <div class="card-body">
                                <p class="card-id"><strong>ID:</strong> @Html.DisplayFor(m => user.Id)</p>
                                <p class="card-email"><strong>Email:</strong> @Html.DisplayFor(m => user.EmailId)</p>
                                <p class="card-email"><strong>DateOfBirth:</strong> @Html.DisplayFor(m => user.DateOfBirth)</p>
                                <p class="card-phone"><strong>Phone:</strong> @Html.DisplayFor(m => user.PhoneNumber)</p>
                                <p><strong>Gender:</strong> @Html.DisplayFor(m => user.Gender)</p>
                                <p><strong>Blood Group:</strong> @Html.DisplayFor(m => user.BloodGroup)</p>
                                <p><strong>Quantity:</strong> @Html.DisplayFor(m => user.Quantity)</p>
                                <p><strong>Decease:</strong> @Html.DisplayFor(m => user.Decease)</p>
                                <p>
                                    <strong>Address:</strong>
                                    @Html.DisplayFor(m => user.StreetAddress),
                                    @Html.DisplayFor(m => user.City),
                                    @Html.DisplayFor(m => user.State),
                                    @Html.DisplayFor(m => user.ZipCode),
                                    @Html.DisplayFor(m => user.Country)
                                </p>
                                <p><strong>Status:</strong> @Html.DisplayFor(m => user.IsApproved)</p>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center">Pending Your Request Please Wait....</div>
                }
            </div>
        }

        <div class="text-center mt-4">
            <button class="print-button" onclick="window.print()">Print</button>
        </div>
    </div>
</body>
</html>

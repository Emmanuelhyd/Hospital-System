@model Hospital_System.Models.UserModel

@{
    ViewBag.Title = "Relative Information";
    Layout = "~/Views/Shared/_UserLayoutBlod.cshtml";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        body {
            background-color: #eef2f3;
            font-family: 'Arial', sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin: 0;
        }

        .form-container {
            width: 320px;
            padding: 20px;
            background: #ffcccc;
            border-radius: 15px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        h4 {
            color: #000;
            margin-bottom: 20px;
            font-size: 1.8em;
            font-weight: 600;
        }

        .form-label {
            font-weight: bold;
            color: #000;
            margin-bottom: 5px;
            text-align: left;
            display: block;
        }

        .form-control {
            border-radius: 10px;
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 15px;
            width: calc(100% - 22px);
            transition: border-color 0.3s;
        }

            .form-control:focus {
                border-color: #e57373;
                box-shadow: 0 0 5px rgba(233, 30, 99, 0.5);
                outline: none;
            }

        .btn-primary {
            background-color: #e57373;
            border: none;
            border-radius: 10px;
            transition: background-color 0.3s, transform 0.3s;
            padding: 10px;
            width: 100%;
            color: #fff;
            font-weight: bold;
        }

            .btn-primary:hover {
                background-color: #d32f2f;
                transform: translateY(-2px);
            }
    </style>
</head>
<body>
    <div class="form-container">
        <h4>Registration Page</h4>
        @using (Html.BeginForm("RegisterForm", "User"))
        {
            <div class="mb-3">
                @Html.LabelFor(m => m.FirstName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control", placeholder = "First Name" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.LastName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control", placeholder = "Last Name" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.EmailId, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.EmailId, new { @class = "form-control", placeholder = "Email Address" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.PhoneNumber, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Phone Number" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.DateOfBirth, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.DateOfBirth, new { @class = "form-control", id = "datepicker", placeholder = "Select Date" })
            </div>
            <div class="mb-3">
                @Html.LabelFor(m => m.Address, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Address" })
            </div>
            <div>
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        }
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script>
        $(document).ready(function () {
            flatpickr("#datepicker", {
                dateFormat: "Y-m-d",
                maxDate: "today"
            });
        });
    </script>
</body>
</html>

@model Hospital_System.Models.UserModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <title>Login Page</title>
    <style>
        body {
            background: #f2f3f5;
            font-family: 'Helvetica Neue', Arial, sans-serif;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            margin-left:-50px;
            padding: 0;
        }

        .login-container {
            background-color: #ffffff;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            width:125%;
            box-sizing: border-box;
            transition: all 0.3s ease;
        }

            .login-container:hover {
                transform: translateY(-10px);
            }

        h2 {
            font-size: 30px;
            margin-bottom: 20px;
            color: #333;
            font-weight: 600;
            text-align: center;
        }

        p {
            color: #777;
            font-size: 14px;
            text-align: center;
            margin-bottom: 25px;
        }

        .form-group {
            margin-bottom: 20px;
        }

            .form-group label {
                font-size: 14px;
                font-weight: 600;
                color: #555;
            }

        .form-control {
            border-radius: 8px;
            border: 1px solid #ddd;
            padding: 12px 15px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

            .form-control:focus {
                border-color: #007bff;
                box-shadow: 0 0 8px rgba(0, 123, 255, 0.3);
                outline: none;
            }

        .btn-primary {
            color: #fff;
            background: #e74715;
            background: -webkit-linear-gradient(to top, #d83d0c, #FF5722);
            background: linear-gradient(to top, #d83d0c, #FF5722);
            padding: 7px 20px;
            border: none;
            font-size: 16px;
            height: 5vh;
            width: 100%;
            border-radius: 8px;
            font-weight: 600;
            align-content: center;
            transition: background-color 0.3s, transform 0.3s ease;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                transform: translateY(-2px);
            }

        .forgot-password-link {
            font-size: 14px;
            color: #007bff;
            text-decoration: none;
            display: block;
            text-align: center;
            margin-top: 10px;
        }

            .forgot-password-link:hover {
                text-decoration: underline;
            }

        .register-link {
            font-size: 14px;
            color: #555;
            text-align: center;
            margin-top: 20px;
        }

            .register-link a {
                color: #007bff;
                text-decoration: none;
            }

                .register-link a:hover {
                    text-decoration: underline;
                }

        .alert-danger {
            margin-top: 20px;
            border-radius: 5px;
            padding: 10px;
            background-color: #f8d7da;
            color: #721c24;
            font-size: 14px;
            text-align: center;
        }

        .social-login-buttons {
            display: flex;
            justify-content: center;
            margin-top:10px;
        }

            .social-login-buttons a {
                margin: 0 10px;
            }

            .social-login-buttons img {
                width:25px;
                height:25px;
                border-radius: 50%;
                transition: transform 0.3s;
            }

                .social-login-buttons img:hover {
                    transform: scale(1.1);
                }
    </style>
</head>
<body>
    @using (Html.BeginForm("UserLogIn", "User", FormMethod.Post))
    {
        <div class="login-container">
            <h2>User LogIn</h2>
            <p>Access your account by logging in.</p>

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <div class="form-group">
                @Html.LabelFor(model => model.EmailId)
                @Html.TextBoxFor(model => model.EmailId, new { @class = "form-control", placeholder = "Enter your email", required = "required", aria_required = "true" })
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Password)
                @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = "Enter your password", required = "required", aria_required = "true" })
            </div>

            <div class="form-check mb-3">
                @Html.CheckBoxFor(model => model.RememberMe, new { @class = "form-check-input" })
                @Html.LabelFor(model => model.RememberMe, new { @class = "form-check-label" })
            </div>

            <div class="forgot-password-link">
                <a href="@Url.Action("ForgotPassword", "User")">Forgot Password?</a>
            </div>
            <br />
            <div class="mb-3">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>

            <div class="register-link">
                <span>Don't have an account? </span>
                <a href="@Url.Action("RegisterForm", "User")">Sign Up</a>
            </div>
            <div style="margin-left:100px;margin-top:5px;">
                <h6>or</h6>
            </div>
            <!-- Social Media Login Icons -->
            <div class="social-login-buttons">
                <!-- Facebook -->
                <a href="https://www.facebook.com" target="_blank">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/5/51/Facebook_f_logo_%282019%29.svg" alt="Facebook">
                </a>
                <!-- Google -->
                <a href="https://accounts.google.com" target="_blank">
                    <img src="~/Images/google-icon.jpg" />
                </a>
                <!-- Instagram -->
                <a href="https://www.instagram.com" target="_blank">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/9/95/Instagram_logo_2022.svg/1200px-Instagram_logo_2022.svg.png" alt="Instagram">
                </a>
                <!-- Twitter -->
                <a href="https://twitter.com" target="_blank">
                    <img src="~/Images/twitter-512.jpg" />
                </a>
            </div>
        </div>
    }

    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation/1.19.2/jquery.validate.min.js"></script>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.11/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

@model IEnumerable<Hospital_System.Models.Vaccines>


@{
    ViewBag.Title = "VaccineList";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>VaccineList</title>
</head>

    <style >
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background-color: #f9f9f9;
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin: 20px 0;
        background-color: white;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    th, td {
        border: 1px solid #dddddd;
        padding: 12px;
        text-align: left;
    }

    thead {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f9f9f9;
    }

    tr:hover {
        background-color: #f1f1f1;
    }

    h1 {
        text-align: center;
        color: #333;
    }
</style>

<body>
    <div>
       
        @using (Html.BeginForm())

        {
            <input type="search" , name="searchvalue" ,id="searchvalue" />
            <button type="submit"> Search</button>

            @Html.ActionLink("Book Slot","Vaccine","Vaccination")
            <table>
                <thead>
                    <tr>
                        <th> VaccinationId</th>
                        <th>PatientName</th>
                        <th>DoctorName</th>
                        <th>Age</th>
                        <th>VaccineType</th>
                        <th>Dosage</th>
                        @*<th>Follow-Up-Date</th>*@
                        <th>Next Due Date</th>
                        <th>Status</th>
                        <th>Report</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td> @Html.DisplayFor(m => item.VaccineId)</td>
                            <td> @Html.DisplayFor(m => item.PatientName)</td>
                            <td> @Html.DisplayFor(m => item.DoctorName)</td>
                            <td> @Html.DisplayFor(m => item.Age)</td>
                            <td> @Html.DisplayFor(m => item.VaccineType)</td>
                            <td> @Html.DisplayFor(m => item.Dosage)</td>
                            @*<td> @Html.DisplayFor(m => item.FollowupDate)</td>*@
                            <td> @Html.DisplayFor(m => item.NextDueDate)</td>
                            <td> @Html.DisplayFor(m => item.Status)</td>
                            <td> <a href="@Url.Action("VaccinesById", "Vaccination", new { VaccineId = item.VaccineId })">View</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }

    </div>
</body>
</html>

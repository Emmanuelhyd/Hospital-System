@model Hospital_System.Models.Vaccines

@{
    ViewBag.Title = "VaccinesById";
    Layout = null;
}


<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background-color: #f9f9f9;
    }

    div {
        background-color: #fff;
        padding: 20px;
        /* border-radius: 8px;*/
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        max-width: 700px;
        margin: auto;
    }

    strong {
        color: #333;
    }


    /*.field {
        margin-bottom: 10px;*/ /* Adds space between fields */
    /*}*/

    /* Back Button Styling */
    .back-button {
        display: inline-block;
        padding: 10px 15px;
        background-color: #ff6a00;
        border-color: #ff6a00;
        color: white;
        font-size: 14px;
        font-weight: bold;
        border-radius: 5px;
        text-decoration: none;
        /*   margin-bottom: 20px;*/
        transition: background-color 0.3s ease;
    }

        .back-button:hover {
            background-color: #ff6a00; /* Darker blue on hover */
        }

        .back-button:active {
            background-color: #ff6a00; /* Even darker blue when clicked */
        }
</style>

<button onclick="window.history.back();" class="back-button"> Back</button>

<div style="padding: 14px 36px; background: #002147; margin-top: -43px; margin-left: 284px; width: 670px; color: white;">
    <h4>Vaccination Details</h4>

</div>

<div>

    <div class="field">
        <strong>Vaccination ID:</strong> @Model.VaccineId
    </div>
    <div class="field">
        <strong>Patient Name:</strong> @Model.PatientName
    </div>
    <div class="field">
        <strong>Age:</strong> @Model.Age
    </div>
    <div class="field">
        <strong>Doctor Name:</strong> @Model.DoctorName
    </div>
    <div class="field">
        <strong>Vaccination Type:</strong> @Model.VaccineType
    </div>
    <div class="field">
        <strong>Date of Vaccination:</strong> @Model.DateOfVaccination
    </div>
    <div class="field">
        <strong>Dosage:</strong> @Model.Dosage
    </div>
    <div class="field">
        <strong>Follow-Up Date:</strong> @Model.FollowupDate
    </div>
    <div class="field">
        <strong>Next Due Date:</strong> @Model.NextDueDate
    </div>
    <div class="field">
        <strong>Reaction:</strong> @Model.ReactionType
    </div>
    <div class="field">
        <strong>Status:</strong> @Model.Status
    </div>
</div>


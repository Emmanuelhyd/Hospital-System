@model IEnumerable<Hospital_System.Models.VaccineDo>

@{
    ViewBag.Title = "VaccineListAdmin";
    Layout = null;

}



<head>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600&family=Saira:wght@500;600;700&display=swap" rel="stylesheet">

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/All css/css/bootstrap.css" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/All css/css/style.css" rel="stylesheet">
    <link href="~/All css/css/style-mob.css" rel="stylesheet">

    <link href="~/All css/animate/animate.css" rel="stylesheet" />
    <link href="~/All css/animate/animate.min.css" rel="stylesheet" />

    <!-- External styles for SweetAlert -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.css">
</head>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>

<script>
    function confirmDelete(deleteUrl) {
        swal({
            title: "Are you sure?",
            text: "You will not be able to recover this record!",
            icon: "warning",  // Updated to 'icon' instead of 'type'
            buttons: {
                cancel: "No, cancel!",
                confirm: {
                    text: "Yes, delete it!",
                    value: true,
                    visible: true,
                    className: "btn-danger",
                    closeModal: true
                }
            }
        })
            .then((willDelete) => {
                if (willDelete) {
                    // Make AJAX request to delete the record
                    $.ajax({
                        url: deleteUrl,
                        type: 'POST',
                        success: function (result) {
                            // Reload or update the table as needed
                            swal("Deleted!", "Your record has been deleted.", "success");
                            location.reload(); // Reload the page to see changes
                        },
                        error: function (err) {
                            swal("Error!", "There was a problem deleting the record.", "error");
                        }
                    });
                } else {
                    swal("Your record is safe!");
                }
            });
    }
</script>
@using (Html.BeginForm())
{

    <div class="sb2-2-3" style="position: absolute; width: 100%; margin-top: 20px">
        <div class="row">
            <div class="col-md-12">
                <div class="box-inn-sp">
                    <div class="inn-titles">
                        <li class="page-back">
                            <a href="/ReceptionAdmin/ReceptionFrontPage"><i class="fa fa-backward" aria-hidden="true" style="margin-top:25px;"></i> Back</a>
                        </li>
                        <input type="button" value="Add New" onclick="window.location.href='@Url.Action("AddVaccine", "VaccinationAdmin")'" class="my-btn" style="margin-top:13px;">

                        <h4 style="margin-left:300px;margin-top:-30px;font-size:20px;color:white;">Vaccination List</h4>

                    </div>
                    <div class="tab-inn">
                        <div class="table-responsive table-desi">
                            <table class="table table-hover">
                                <tr>
                                    <th>Patient Id</th>
                                    <th>Patient Name</th>
                                    <th>Doctor Name</th>
                                    <th>Age</th>
                                    <th>Vaccine Id</th>
                                    <th>Vaccine Type</th>
                                    <th>Dosage</th>
                                    <th>Date Of Vaccination</th>
                                    <th>Followup Date</th>
                                    <th>Next Due Date</th>
                                    <th>Reaction Type</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@Html.DisplayFor(modelItem => item.PatientId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.PatientName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DoctorName)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Age)</td>
                                        <td>@Html.DisplayFor(modelItem => item.VaccineId)</td>
                                        <td>@Html.DisplayFor(modelItem => item.VaccineType)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Dosage)</td>
                                        <td>@Html.DisplayFor(modelItem => item.DateOfVaccination)</td>
                                        <td>@Html.DisplayFor(modelItem => item.FollowupDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.NextDueDate)</td>
                                        <td>@Html.DisplayFor(modelItem => item.ReactionType)</td>
                                        <td>@Html.DisplayFor(modelItem => item.Status)</td>
                                        <td style="display:flex;gap:5px;">
                                            <a href="@Url.Action("VaccineEdit", new { PatientId = item.PatientId })">
                                                <i class="fas fa-edit" style="color: blue; font-size: 10px; padding: 10px;color:blue;"></i>
                                            </a>
                                            <a href="javascript:void(0);"
                                               onclick="confirmDelete('@Url.Action("VaccineDelete", new { PatientId = item.PatientId })')">
                                                <i class="fas fa-trash-alt" style="font-size: 10px; padding: 10px;color:red;"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </table>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
}


<style>
    .my-btn {
        color: #ffffff;
        background: #57666d;
        padding: 10px;
        line-height: 10px;
        font-weight: 1000;
    }

    .inn-titles {
        padding: 1px 25px;
        background: #002147;
        height: 70px;
    }
